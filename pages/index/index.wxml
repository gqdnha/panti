    <!-- 个人数据统计模块 -->
    <view class="module-section">
        <view class="section-title">个人数据</view>
        <view class="module-content">
            <view class="module-item" bindtap="goToAnswerStats">
                <image class="module-icon" src="/assets/icons/统计.png"></image>
                <text class="module-name">答题统计</text>
            </view>
            <view class="module-item" bindtap="goToWrongQuestions">
                <image class="module-icon" src="/assets/icons/错题本.png"></image>
                <text class="module-name">错题本</text>
            </view>
            <view class="module-item" bindtap="goToAnswerHistory">
                <image class="module-icon" src="/assets/icons/答题历史.png"></image>
                <text class="module-name">答题历史</text>
            </view>

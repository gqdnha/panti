            </view>
            <view class="module-item" bindtap="goToResources" data-category="标准">
                <image class="module-icon" src="/assets/icons/标准.png"></image>
                <text class="module-name">标准</text>
            </view>
            <view class="module-item" bindtap="goToResources" data-category="导则">
                <image class="module-icon" src="/assets/icons/导则.png"></image>
                <text class="module-name">导则</text>
            </view> -->
        </view>
    </view>


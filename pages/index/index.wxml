<!--index.wxml-->
<view class="container">
    <!-- 顶部用户信息 -->
    <view class="user-detail">
        <view class="welcomeBox">
            <text class="welcomId">Hi，</text>
            <text class="welcomName">耿庆栋</text>
        </view>

        <view class="user-stats">
            <text>学习时长：{{studyTime}}分钟</text>
            <text>答题数：{{totalQuestions}}</text>
            <text>正确率：{{correctRate}}%</text>
        </view>
    </view>
    <!-- 基础理论模块 -->
    <view class="module-section">
        <view class="section-title">基础理论</view>
        <view class="module-content">
            <view class="module-item" bindtap="goToSequentialPractice">
                <image class="module-icon" src="/assets/icons/顺序练习.png"></image>
                <text class="module-name">顺序练习</text>
            </view>
            <view class="module-item" bindtap="goToTopicalPractice" data-category="法律法规">
                <image class="module-icon" src="/assets/icons/专题练习.png"></image>
                <text class="module-name">专题练习</text>
            </view>
            <view class="module-item" bindtap="goToDailyPractice" data-option="{{dailyOptions[0]}}">
                <image class="module-icon" src="/assets/icons/每日练习.png"></image>
                <text class="module-name">每日练习</text>
            </view>
        </view>
    </view>

    <!-- 资料库模块 -->
    <view class="module-section">
        <view class="section-title">资料库</view>
        <view class="module-content">
            <view class="module-item lawItem" bindtap="goToResources" data-category="法律法规">
                <image class="module-icon" src="/assets/icons/法律法规.png"></image>
                <text class="module-name">法律法规</text>
            </view>

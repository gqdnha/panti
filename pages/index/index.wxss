page {
    padding: 0;
    margin: 0;
    height: 100vh;
}

.container {
    min-height: 100vh;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: start;
    /* background: linear-gradient(135deg, #1E3A6D 0%, #2563A6 100%); 执法蓝渐变 */
    position: relative;
    overflow: hidden;
    padding-top: 30rpx;
}

.container::before {
    content: '';
    position: absolute;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.10) 0%, rgba(255,255,255,0) 70%);
    animation: rotate 20s linear infinite;
}

@keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

/* 顶部用户信息 */
.user-detail {
    width: 100vw;
    color: rgb(0, 0, 0);
    padding: 30rpx 30rpx 10rpx 30rpx;
    box-sizing: border-box;
    background: transparent;
    text-shadow: 0 2rpx 8rpx rgba(30,58,109,0.10);
}

.welcomeBox {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.welcomId {
    font-size: 40px;
    font-weight: 500;
    text-align: center;
    /* color: #fff; */
}

.welcomName {
    text-align: center;
    font-size: 30px;
    font-weight: 300;
    /* color: rgb(0, 0, 0); */
}

/* 学习时长 */
.study-content {
    margin-top: 10rpx;
    width: 660rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.study-item {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 180rpx;
    height: 180rpx;
    padding: 15rpx;
    color: #fff;
    /* background: rgba(255,255,255,0.90); */
    /* background-color: #3EBEFA; */
    background: linear-gradient(135deg, #42C3FC ,#2CA2FC, #137CFB);
    /* border: 1px solid rgba(255, 255, 255, 0.4); */
    border-radius: 36rpx;
    box-shadow: 0 8rpx 32rpx rgba(30, 58, 109, 0.13);
    transition: all 0.3s cubic-bezier(.25,.8,.25,1);
    margin-bottom: 10rpx;
}

.study-item:active {
    transform: scale(0.97);
    background: rgba(255, 255, 255, 0.8);
}

.studyName {
    font-size: 24rpx;
    /* color: #2563A6; */
    text-align: center;
    margin-top: 8rpx;
    font-weight: 500;
}

.studyValue {
    font-size: 36rpx;
    /* color: #1E3A6D; */
    text-align: center;
    /* font-weight: 500; */
    text-shadow: 0 2rpx 4rpx rgba(30, 58, 109, 0.10);
}

.total-count {
    color: #ffffff;
    /* color: #999999; */
    font-weight: 500;
    font-size: 28rpx;
}

/* 功能模块 */
.function-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin-top: 40rpx;
}

.function-content-row {
    display: flex;
    flex-direction: row;
}

.function-content-right {
    margin-left: 24rpx;
    display: flex;
    flex-direction: column;
    gap: 24rpx;
}

.dailyTest, .orderTest, .functionLaw {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 32rpx;
    box-shadow: 0 8rpx 32rpx rgba(30, 58, 109, 0.16), 0 1rpx 4rpx rgba(30, 58, 109, 0.10);
    /* background: linear-gradient(135deg, #fff 60%, #e6ecfa 100%); */
    /* background: linear-gradient(135deg, rgb(195, 255, 252) 60%, #e6f4fa 100%); */
    background: #1F3F73 ;
    color: #fff;
    border: none;
    transition: box-shadow 0.2s, transform 0.2s;
}

.dailyTest {
    width: 250rpx;
    height: 450rpx;
    margin-right: 0;
    margin-bottom: 0;
}

.orderTest, .functionLaw {
    width: 390rpx;
    height: 210rpx;
}

.dailyTest:active, .orderTest:active, .functionLaw:active {
    box-shadow: 0 12rpx 40rpx rgba(30, 58, 109, 0.22), 0 2rpx 8rpx rgba(30, 58, 109, 0.14);
    transform: translateY(-4rpx) scale(1.03);
}

.module-icon {
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 18rpx;
    color: #2563A6;
}

.module-name {
    font-size: 38rpx;
    font-weight: 500;
    /* color: #1E3A6D; */
    /* color: #fff; */
    text-align: center;
    margin-bottom: 8rpx;
    letter-spacing: 1rpx;
}

.startTest {
    font-size: 28rpx;
    height: 60rpx;
    width: 160rpx;
    text-align: center;
    line-height: 60rpx;
    border-radius: 32rpx;
    background: linear-gradient(90deg, #2563A6 0%, #1E3A6D 100%);
    color: #fff;
    position: absolute;
    bottom: 44rpx;
    left: 50%;
    transform: translateX(-50%);
    font-weight: 600;
    box-shadow: 0 4rpx 16rpx rgba(30, 58, 109, 0.13);
    letter-spacing: 1rpx;
}

/* 公告组件样式 */
.notice-container {
    /* margin-top: 30rpx; */
    width: 100%;
    background: linear-gradient(to right, #fff5f5, #fff);
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    margin-bottom: 0;
    border-bottom: 1rpx solid #ffecec;
    border-radius: 0 0 18rpx 18rpx;
    box-shadow: 0 2rpx 8rpx rgba(30, 58, 109, 0.06);
}
.notice-container.not-finished {
    background: linear-gradient(to right, #fff5f5, #fff);
    border-bottom: 1rpx solid #ffecec;
}
.notice-container:not(.not-finished) {
    background: linear-gradient(to right, #e6f7ff, #fff);
    border-bottom: 1rpx solid #e6f7ff;
}
.notice-content {
    display: flex;
    align-items: center;
    height: 50rpx;
}
.notice-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 16rpx;
}
.notice-swiper {
    flex: 1;
    height: 50rpx;
}
.notice-text {
    font-size: 26rpx;
    line-height: 50rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.notice-text.finished {
    color: #1890ff;
}
.notice-text.not-finished {
    color: #ff4d4f;
}
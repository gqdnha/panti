/**index.wxss**/
page {
  height: 100vh;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f8fa;
  padding: 20rpx;
  box-sizing: border-box;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

/* 用户信息样式 */
.user-info {
  background: linear-gradient(135deg, #4a90e2, #357abd);
  padding: 30rpx;
  color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(74, 144, 226, 0.2);
}

.avatar-box {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  position: relative;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.welcome-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 30rpx;
}

.study-time {
  font-size: 28rpx;
  opacity: 0.9;
  display: flex;
  align-items: center;
}

/* 题库分类样式 */
.question-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.question-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.question-item {
  background-color: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.category-desc {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 统计数据样式 */
.stats-section {
  background-color: #fff;
  padding: 20rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.stats-item {
  text-align: center;
}

.stats-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #4a90e2;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 功能模块样式 */
.function-section {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.function-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  min-height: 200rpx;
}

.function-icon {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 16rpx;
}

.function-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.function-desc {
  font-size: 26rpx;
  color: #666;
}

.start-btn {
  margin-top: auto;
  background-color: #f0f8ff;
  color: #4a90e2;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 最近考试样式 */
.recent-exams {
  margin: 30rpx;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.exam-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.exam-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.exam-item:active {
  transform: scale(0.98);
  background-color: #f0f2f5;
}

.exam-info {
  flex: 1;
}

.exam-name {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #333;
}

.exam-meta {
  display: flex;
  gap: 24rpx;
}

.exam-time, .exam-duration {
  font-size: 24rpx;
  color: #666;
}

.exam-status {
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-weight: 500;
}

.exam-status.upcoming {
  background-color: #e6f7ff;
  color: #4a90e2;
}

.exam-status.ongoing {
  background-color: #f6ffed;
  color: #52c41a;
}

.exam-status.ended {
  background-color: #f5f5f5;
  color: #999;
}

/* 推荐练习样式 */
.recommended {
  margin: 30rpx;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.recommend-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.recommend-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.recommend-item:active {
  transform: scale(0.98);
  background-color: #f0f2f5;
}

.recommend-icon {
  width: 100rpx;
  height: 100rpx;
  margin-right: 24rpx;
  border-radius: 16rpx;
}

.recommend-info {
  flex: 1;
}

.recommend-name {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #333;
}

.recommend-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.recommend-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.question-count, .difficulty {
  font-size: 24rpx;
  color: #666;
  background-color: #f0f2f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

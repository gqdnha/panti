page {
    height: 100vh;
}

.container {
    min-height: 100vh;
    background-color: #f5f6fa;
    padding: 0;
}

/* 顶部用户信息 */
.welcomeBox {
    display: flex;
    flex-direction: row;
    align-items: center;
}
.welcomId {
    font-size: 40px;
    font-weight: 500;
    text-align: center;
}
.welcomName {
    text-align: center;
    font-size: 30px;
    font-weight: 300;
}

/* 顶部 */
.user-detail {
    width: 100vw;
    color: #fff;
    padding: 40rpx 30rpx;
    box-sizing: border-box;
    background: linear-gradient(135deg, #4a90e2, #357abd);
}

.nickname {
    font-size: 40rpx;
    font-weight: 600;
    margin-bottom: 12rpx;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.welcome-text {
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 30rpx;
}

.study-time {
    font-size: 28rpx;
    opacity: 0.9;
    display: flex;
    align-items: center;
}

.user-stats {
    display: flex;
    flex-wrap: wrap;
    gap: 10rpx;
    font-size: 28rpx;
    color: #fff;
}

/* 题库分类样式 */
.question-section {
    background-color: #fff;
    border-radius: 20rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
    /* width: 300rpx; */
    border-radius: 35rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
    padding-left: 15rpx;
}

.question-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
}

.question-item {
    background-color: #f8f8f8;
    border-radius: 16rpx;
    padding: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.category-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 10rpx;
}

.category-name {
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 6rpx;
}

.category-desc {
    font-size: 24rpx;
    color: #666;
    text-align: center;
}

/* 优化标题样式 */
.section-title {
    font-size: 28rpx;
    font-weight: bold;
    color: #fff;
    background-color: #88bbee;
    padding: 12rpx 20rpx;
    border-radius: 4rpx;
    margin-bottom: 15rpx;
    text-align: center;
}

/* 模块通用样式 */
.module-section {
    background-color: #fff;
    padding: 15rpx 30rpx;
    margin-bottom: 10rpx;
    width: 100%;
    box-sizing: border-box;
}

.module-content {
    display: flex;
    /* flex-wrap: wrap;
  gap: 10rpx; */
    justify-content: space-around;
}

.module-item {
    width: 150rpx;
    height: 150rpx;
    background-color: #88bbee;
    padding: 15rpx;
    border-radius: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}
/* 法律专栏 */
.lawItem {
    width: 80vw;
    height: 200rpx;
}

.module-item:active {
    background-color: #e6f0ff;
}

.module-icon {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 10rpx;
}

.module-name {
    font-size: 26rpx;
    color: #fff;
    text-align: center;
}



/* 用户反馈样式 */
.feedback-section {
    background-color: #fff;
    padding: 15rpx;
    text-align: center;
    font-size: 24rpx;
    color: #666;
    margin-top: 10rpx;
    width: 100%;
    box-sizing: border-box;
}

.feedback-section:active {
    background-color: #f0f2f5;
}
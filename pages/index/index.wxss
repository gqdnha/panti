/**index.wxss**/
page {
  height: 100vh;
}

.container {
  min-height: 100vh;
  background-color: #f5f6fa;
  padding: 0;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
  box-sizing: border-box;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

/* 用户信息样式 */
.user-info {
  background-color: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}

.avatar-container {
  margin-right: 15rpx;
}

.avatar-box {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  position: relative;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}
/* 顶部 */
.user-detail {
    background: linear-gradient(135deg, #4a90e2, #357abd);
    width: 100vw;
    background: linear-gradient(135deg, #4a90e2, #357abd);
    padding: 40rpx 30rpx;
    color: #fff;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    box-sizing: border-box;
}

.nickname {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.welcome-text {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 30rpx;
}

.study-time {
  font-size: 28rpx;
  opacity: 0.9;
  display: flex;
  align-items: center;
}

.user-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  font-size: 22rpx;
  color: #666;
}

/* 题库分类样式 */
.question-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  padding-left: 15rpx;
  border-left: 6rpx solid #88bbee;
}

.question-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.question-item {
  background-color: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.category-desc {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 统计数据样式 */
.stats-section {
  background-color: #fff;
  padding: 20rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.stats-item {
  text-align: center;
}

.stats-value {
  font-size: 40rpx;
  font-weight: 600;
  color: #4a90e2;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 功能模块样式 */
.function-section {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.function-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  min-height: 200rpx;
}

.function-icon {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 16rpx;
}

.function-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.function-desc {
  font-size: 26rpx;
  color: #666;
}

.start-btn {
  margin-top: auto;
  background-color: #f0f8ff;
  color: #4a90e2;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 最近考试样式 */
.recent-exams {
  margin: 30rpx;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.exam-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.exam-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.exam-item:active {
  transform: scale(0.98);
  background-color: #f0f2f5;
}

.exam-info {
  flex: 1;
}

.exam-name {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #333;
}

.exam-meta {
  display: flex;
  gap: 24rpx;
}

.exam-time, .exam-duration {
  font-size: 24rpx;
  color: #666;
}

.exam-status {
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-weight: 500;
}

.exam-status.upcoming {
  background-color: #e6f7ff;
  color: #4a90e2;
}

.exam-status.ongoing {
  background-color: #f6ffed;
  color: #52c41a;
}

.exam-status.ended {
  background-color: #f5f5f5;
  color: #999;
}

/* 推荐练习样式 */
.recommended {
  margin: 30rpx;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.recommend-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.recommend-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.recommend-item:active {
  transform: scale(0.98);
  background-color: #f0f2f5;
}

.recommend-icon {
  width: 100rpx;
  height: 100rpx;
  margin-right: 24rpx;
  border-radius: 16rpx;
}

.recommend-info {
  flex: 1;
}

.recommend-name {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #333;
}

.recommend-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.recommend-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.question-count, .difficulty {
  font-size: 24rpx;
  color: #666;
  background-color: #f0f2f5;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.header {
  padding: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333;
}

.main-content {
  display: flex;
  flex: 1;
  gap: 20rpx;
}

.left-section, .right-section {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  flex: 1;
}

.center-logo {
  width: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.center-logo image {
  width: 100%;
  height: 300rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  background-color: #88bbee;
  padding: 10rpx 20rpx;
  border-radius: 4rpx;
  margin-bottom: 20rpx;
}

.function-list, .question-types, .stats-items {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.function-item, .question-item, .stats-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx;
  background-color: #88bbee;
  color: #fff;
  border-radius: 4rpx;
}

.arrow {
  color: #fff;
  font-size: 24rpx;
}

.note {
  font-size: 24rpx;
  color: #ff0000;
  margin-left: 10rpx;
}

.resource-section {
  margin-top: 30rpx;
}

.feedback-btn {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  background-color: #00b7ff;
  color: #fff;
  padding: 15rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.topic-categories, .daily-options, .resource-list, .stats-details, .wrong-book-details {
  margin-left: 30rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #fff;
}

.topic-categories text, .daily-options text, .resource-list text, .stats-details text, .wrong-book-details text {
  display: block;
  margin: 5rpx 0;
  opacity: 0.9;
}

.resource-list {
  background-color: #88bbee;
  padding: 15rpx;
  border-radius: 4rpx;
}

.resource-list text {
  margin: 8rpx 0;
}

.function-item, .question-item, .stats-item {
  display: flex;
  flex-direction: column;
  padding: 15rpx;
  background-color: #88bbee;
  color: #fff;
  border-radius: 4rpx;
  margin-bottom: 10rpx;
}

.function-item > text:first-child, .question-item > text:first-child, .stats-item > text:first-child {
  display: flex;
  align-items: center;
}

.arrow {
  margin-right: 10rpx;
  font-size: 24rpx;
}

.note {
  color: #ff9900;
  font-style: italic;
  margin-top: 10rpx;
}

.stats-details, .wrong-book-details {
  margin-top: 10rpx;
  padding-left: 20rpx;
  border-left: 2rpx solid rgba(255, 255, 255, 0.3);
}

/* 修改主要布局样式 */
.main-content {
  display: flex;
  gap: 20rpx;
  height: calc(100vh - 180rpx);
}

.left-section, .right-section {
  flex: 1;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  overflow-y: auto;
}

.center-logo {
  width: 240rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 优化标题样式 */
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  background-color: #88bbee;
  padding: 12rpx 20rpx;
  border-radius: 4rpx;
  margin-bottom: 15rpx;
  text-align: center;
}

/* 模块通用样式 */
.module-section {
  background-color: #fff;
  padding: 15rpx 30rpx;
  margin-bottom: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.module-content {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.module-item {
    width: 120rpx;
    height: 120rpx;
    background-color: #88bbee;
    padding: 15rpx;
    border-radius: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.module-item:active {
  background-color: #e6f0ff;
}

.module-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.module-name {
  font-size: 26rpx;
  color: #fff;
  text-align: center;
}



/* 用户反馈样式 */
.feedback-section {
  background-color: #fff;
  padding: 15rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.feedback-section:active {
  background-color: #f0f2f5;
}

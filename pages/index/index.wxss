.module-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 10rpx;
}

.module-name {
    font-size: 35rpx;
    font-weight: 600;
    color: #fff;
    text-align: center;
}

/* 公告组件样式 */
.notice-container {
    width: 100%;
    background: linear-gradient(to right, #fff5f5, #fff);
    padding: 16rpx 30rpx;
    box-sizing: border-box;
    margin-bottom: 0;
    border-bottom: 1rpx solid #ffecec;
}

/* 未完成状态的样式 */
.notice-container.not-finished {
    background: linear-gradient(to right, #fff5f5, #fff);
    border-bottom: 1rpx solid #ffecec;
}

/* 已完成状态的样式 */
.notice-container:not(.not-finished) {
    background: linear-gradient(to right, #e6f7ff, #fff);
    border-bottom: 1rpx solid #e6f7ff;
}

.notice-content {
    display: flex;
    align-items: center;
    height: 50rpx;
}

.notice-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 16rpx;
}

.notice-swiper {
    flex: 1;
    height: 50rpx;
}

.notice-text {
    font-size: 26rpx;
    line-height: 50rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* 已完成状态文字颜色 */
.notice-text.finished {
    color: #1890ff;
}

/* 未完成状态文字颜色 */
.notice-text.not-finished {
    color: #ff4d4f;
}

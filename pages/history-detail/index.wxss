.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 答题信息样式 */
.info-section {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.label {
  font-size: 24rpx;
  color: #666;
}

.value {
  font-size: 32rpx;
  font-weight: bold;
  color: #1296db;
}

/* 答题详情样式 */
.detail-section {
  background-color: #fff;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.question-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.question-item {
  background-color: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
}

.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.question-type {
  font-size: 24rpx;
  color: #1296db;
  background-color: #e6f7ff;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}

.question-status {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}

.question-status.correct {
  background-color: #f6ffed;
  color: #52c41a;
}

.question-status.wrong {
  background-color: #fff2f0;
  color: #ff4d4f;
}

.question-content {
  margin-bottom: 20rpx;
}

.question-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.answer-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.answer-item {
  display: flex;
  margin-bottom: 10rpx;
}

.answer-label {
  font-size: 26rpx;
  color: #666;
  width: 160rpx;
}

.answer-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.answer-value.correct {
  color: #52c41a;
}

.explanation {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.explanation-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.explanation-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 底部按钮样式 */
.bottom-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  gap: 20rpx;
}

.share-btn, .retry-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.share-btn {
  background-color: #f5f5f5;
  color: #666;
}

.retry-btn {
  background-color: #1296db;
  color: #fff;
} 
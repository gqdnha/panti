.container {
    margin: 0;
    padding: 0;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(to bottom, #e6f7ff, #ffffff);
}

.login-box {
    width: 85%;
    padding: 40rpx;
    background-color: rgba(255, 255, 255, 0.95);
    border-radius: 30rpx;
    box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

.title {
    font-size: 48rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 60rpx;
    color: #333;
    position: relative;
}

.title::after {
    content: '';
    position: absolute;
    bottom: -20rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 6rpx;
    background-color: #1296db;
    border-radius: 3rpx;
}

.input-group {
    margin-bottom: 40rpx;
    position: relative;
}

.input-group input {
    width: 100%;
    height: 100rpx;
    padding: 0 30rpx;
    border: 2rpx solid #e8e8e8;
    border-radius: 50rpx;
    box-sizing: border-box;
    font-size: 32rpx;
    background-color: #f8f8f8;
    transition: all 0.3s ease;
}

.input-group input:focus {
    border-color: #1296db;
    background-color: #fff;
    box-shadow: 0 0 10rpx rgba(18, 150, 219, 0.1);
}

.verification {
    display: flex;
    align-items: center;
    gap: 20rpx;
}

.verification input {
    flex: 1;
}

.send-code-btn {
    width: 220rpx;
    height: 100rpx;
    line-height: 70rpx;
    font-size: 30rpx;
    color: #1296db;
    background-color: #e6f7ff;
    border: none;
    border-radius: 50rpx;
    transition: all 0.3s ease;
}

.send-code-btn:active {
    transform: scale(0.98);
    background-color: #d0e9ff;
}

.send-code-btn[disabled] {
    color: #999;
    background-color: #f5f5f5;
    border: none;
}

.login-btn {
    width: 100%;
    /* line-height: 100rpx; */
    background: linear-gradient(to right, #1296db, #40a9ff);
    color: #fff;
    border-radius: 50rpx;
    font-size: 36rpx;
    font-weight: bold;
    margin-top: 20rpx;
    box-shadow: 0 8rpx 20rpx rgba(18, 150, 219, 0.2);
    transition: all 0.3s ease;
}

.login-btn:active {
    transform: scale(0.98);
    box-shadow: 0 4rpx 10rpx rgba(18, 150, 219, 0.2);
}

/* 添加输入框图标 */
.input-group::before {
    content: '';
    position: absolute;
    left: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 40rpx;
    height: 40rpx;
    background-size: contain;
    background-repeat: no-repeat;
    opacity: 0.5;
}


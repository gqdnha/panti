.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
    position: relative;
    overflow: hidden;
    padding-top: 15vh;
}

.container::before {
    content: '';
    position: absolute;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0) 60%);
    animation: rotate 20s linear infinite;
}

@keyframes rotate {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}

.welcome-text {
    text-align: center;
    margin-bottom: 60rpx;
    animation: fadeIn 1s ease-out;
}

.welcome-title {
    font-size: 56rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.welcome-subtitle {
    font-size: 32rpx;
    color: #666;
    opacity: 0.8;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-20rpx);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.login-box {
    width: 85%;
    padding: 50rpx 40rpx;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 30rpx;
    box-shadow: 0 8rpx 32rpx rgba(31, 38, 135, 0.15);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    position: relative;
    z-index: 1;
    animation: slideUp 0.5s ease-out;
}

@keyframes slideUp {
    from {
        transform: translateY(50rpx);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.title {
    font-size: 44rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 60rpx;
    color: #333;
    position: relative;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.title::after {
    content: '';
    position: absolute;
    bottom: -20rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 6rpx;
    background: linear-gradient(90deg, #a8edea 0%, #fed6e3 100%);
    border-radius: 3rpx;
}

.input-group {
    margin-bottom: 40rpx;
    position: relative;
}

.input-group input {
    width: 100%;
    height: 100rpx;
    padding: 0 40rpx;
    border: 2rpx solid rgba(255, 255, 255, 0.2);
    border-radius: 50rpx;
    font-size: 30rpx;
    box-sizing: border-box;
    background: rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
}

.input-group input:focus {
    border-color: rgba(168, 237, 234, 0.4);
    box-shadow: 0 0 20rpx rgba(168, 237, 234, 0.2);
    background: rgba(255, 255, 255, 0.3);
}

.verification {
    display: flex;
    align-items: center;
    gap: 20rpx;
}

.verification input {
    flex: 1;
}

.send-code-btn {
    width: 220rpx;
    height: 100rpx;
    line-height: 70rpx;
    font-size: 30rpx;
    color: #4bb3eb;
    background-color: #e6f7ff9b;
    border: none;
    border-radius: 50rpx;
    transition: all 0.3s ease;
}

.send-code-btn:active {
    transform: scale(0.98);
    background-color: #d0e9ff;
}

.send-code-btn[disabled] {
    color: #999;
    background-color: #f5f5f5;
    border: none;
}

.login-btn {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background: linear-gradient(135deg, rgba(168, 237, 234, 0.4) 0%, rgba(254, 214, 227, 0.4) 100%);
    color: #333;
    border-radius: 50rpx;
    font-size: 34rpx;
    font-weight: bold;
    margin-top: 50rpx;
    box-shadow: 0 8rpx 20rpx rgba(168, 237, 234, 0.2);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
}

.wechat-icon {
    width: 48rpx;
    height: 48rpx;
    margin-right: 16rpx;
}

.button-hover {
    transform: scale(0.98);
    box-shadow: 0 4rpx 10rpx rgba(168, 237, 234, 0.2);
}

.button-hover::after {
    opacity: 1;
}

.login-btn::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
}

/* 添加输入框图标 */
.input-group::before {
    content: '';
    position: absolute;
    left: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 40rpx;
    height: 40rpx;
    background-size: contain;
    background-repeat: no-repeat;
    opacity: 0.5;
    z-index: 1;
}

.input-group:first-of-type::before {
    background-image: url('data:image/svg+xml;base64,');
}

/* 调整输入框内边距，为图标留出空间 */
.input-group input {
    padding-left: 90rpx;
}
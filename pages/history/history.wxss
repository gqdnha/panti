.list-header th {
    border-bottom: 2rpx solid #ccc;
    padding: 16rpx;
    text-align: left;
}

.list-content td {
    padding: 16rpx;
}


/* 全局按钮样式重置 */
button {
    margin: 0;
    padding: 0;
    line-height: 1.5;
    background: none;
    border-radius: 0;
}

button::after {
    display: none;
}
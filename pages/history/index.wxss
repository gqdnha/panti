.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 顶部统计样式 */
.stats-section {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-item {
  text-align: center;
}

.stats-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #1296db;
  margin-bottom: 10rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 答题记录列表样式 */
.history-list {
  background-color: #fff;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.header-text {
  font-size: 32rpx;
  font-weight: bold;
}

.filter-btn {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.filter-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
}

.record-list {
  max-height: 800rpx;
  overflow-y: auto;
}

.record-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-item:last-child {
  border-bottom: none;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.record-title {
  font-size: 30rpx;
  font-weight: bold;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-info {
  display: flex;
  gap: 20rpx;
}

.info-item {
  font-size: 24rpx;
  color: #666;
}

.record-status {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}

.record-status.completed {
  background-color: #f6ffed;
  color: #52c41a;
}

.record-status.in-progress {
  background-color: #e6f7ff;
  color: #1296db;
}

/* 空状态样式 */
.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 筛选弹窗样式 */
.filter-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}

.filter-popup.show {
  visibility: visible;
  opacity: 1;
}

.filter-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.filter-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.filter-popup.show .filter-content {
  transform: translateY(0);
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.filter-title {
  font-size: 32rpx;
  font-weight: bold;
}

.filter-close {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}

.filter-body {
  padding: 30rpx;
}

.filter-item {
  margin-bottom: 30rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.picker-value {
  display: inline-block;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

.filter-separator {
  margin: 0 20rpx;
  color: #999;
}

.type-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.type-tag {
  padding: 10rpx 30rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.type-tag.active {
  background-color: #e6f7ff;
  color: #1296db;
}

.filter-footer {
  display: flex;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

.reset-btn, .confirm-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin: 0 10rpx;
}

.reset-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #1296db;
  color: #fff;
} 
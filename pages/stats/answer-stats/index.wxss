/* pages/stats/answer-stats/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f6fa;
  padding: 20rpx;
}

/* 统计卡片样式 */
.stats-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.date-picker {
  font-size: 28rpx;
  color: #666;
}

.stats-content {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.value {
  font-size: 40rpx;
  font-weight: bold;
  color: #0066cc;
  margin-bottom: 8rpx;
}

.label {
  font-size: 24rpx;
  color: #666;
}

/* 图表卡片样式 */
.chart-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.tab-group {
  display: flex;
  gap: 20rpx;
}

.tab {
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f0f2f5;
}

.tab.active {
  background-color: #0066cc;
  color: #fff;
}

.chart-content {
  height: 400rpx;
}

/* 错题本卡片样式 */
.wrong-questions-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  margin-bottom: 20rpx;
}

.filter-group {
  display: flex;
  gap: 20rpx;
  margin-top: 15rpx;
}

.filter-item {
  padding: 10rpx 20rpx;
  background-color: #f0f2f5;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #666;
}

.wrong-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.wrong-item {
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 8rpx;
}

.question-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.type {
  font-size: 24rpx;
  color: #0066cc;
  background-color: #e6f0ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.count {
  font-size: 24rpx;
  color: #666;
}

.question-content {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.5;
}

.question-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

/* 操作栏样式 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.practice-btn {
  background-color: #0066cc;
  color: #fff;
  padding: 20rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  text-align: center;
  border: none;
}

.practice-btn:active {
  opacity: 0.9;
}
.container {
    min-height: 100vh;
    background: linear-gradient(135deg, #1E4B92 0%, #3A7BD5 100%);
    padding: 24rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 24rpx;
    align-items: center;
}

.login-box {
    width: 90%;
    background: #fff;
    border-radius: 24rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(30,75,146,0.08);
    border: 1px solid #e6ecfa;
    transition: all 0.3s ease;
}

.login-box:hover {
    transform: translateY(-2rpx);
    box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.15);
}

.title {
    font-size: 48rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 60rpx;
    color: #333;
    position: relative;
}

.title::after {
    content: '';
    position: absolute;
    bottom: -20rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 6rpx;
    background-color: #1296db;
    border-radius: 3rpx;
}

.input-group {
    display: flex;
    align-items: center;
    margin-bottom: 24rpx;
    background: rgba(255, 255, 255, 0.1);
    padding: 20rpx;
    border-radius: 16rpx;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.input-group text {
    font-size: 32rpx;
    color: #0f172a;
    font-weight: 500;
    margin-right: 20rpx;
    min-width: 140rpx;
}

.input-group input {
    flex: 1;
    height: 60rpx;
    font-size: 32rpx;
    color: #0f172a;
    background: transparent;
    border: 1rpx solid #1E4B92;
    border-radius: 8rpx;
    padding-left: 90rpx;
    box-sizing: border-box;
}

.verification {
    display: flex;
    align-items: center;
    gap: 20rpx;
}

.verification input {
    flex: 1;
}

.send-code-btn {
    width: 220rpx;
    height: 100rpx;
    line-height: 70rpx;
    font-size: 30rpx;
    color: #1296db;
    background-color: #e6f7ff;
    border: none;
    border-radius: 50rpx;
    transition: all 0.3s ease;
}

.send-code-btn:active {
    transform: scale(0.98);
    background-color: #d0e9ff;
}

.send-code-btn[disabled] {
    color: #999;
    background-color: #f5f5f5;
    border: none;
}

.login-btn {
    width: 100%;
    height: 88rpx;
    background: linear-gradient(135deg, #1E4B92 0%, #3A7BD5 100%);
    color: #fff;
    font-size: 32rpx;
    font-weight: 500;
    border-radius: 44rpx;
    box-shadow: 0 4rpx 20rpx rgba(30,75,146,0.10);
    border: none;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.login-btn:hover {
    background: linear-gradient(135deg, #163366 0%, #3A7BD5 100%);
    transform: translateY(-2rpx);
    box-shadow: 0 6rpx 24rpx rgba(30,75,146,0.15);
}

.login-btn:active {
    transform: scale(0.98);
    background: linear-gradient(135deg, #1E4B92 0%, #163366 100%);
}

.login-btn::after {
    border: none;
}

/* 添加输入框图标 */
.input-group::before {
    content: '';
    position: absolute;
    left: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 40rpx;
    height: 40rpx;
    background-size: contain;
    background-repeat: no-repeat;
    opacity: 0.5;
}


<!--pages/login/index.wxml-->
<view class="container">
    <view class="login-box">
        <view class="input-group">
            <text>用户名：</text> 
            <input placeholder="请输入用户名" bindinput="inputUserName" value="{{userName}}" maxlength="11" />
        </view>
        <button class="login-btn" bindtap="handleUserName">确认修改</button>
    </view>

    <view class="login-box">
        <view class="input-group">
            <text>手机号：</text>
            <input type="number" placeholder="请输入手机号" bindinput="inputPhone" value="{{phone}}" maxlength="11" />
        </view>
        <button class="login-btn" bindtap="handleChangePhone">确认修改</button>
    </view>
</view>
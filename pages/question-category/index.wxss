.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.category-header {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.category-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.category-desc {
  font-size: 28rpx;
  color: #666;
}

.question-list {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.question-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.question-item:last-child {
  border-bottom: none;
}

.question-info {
  flex: 1;
}

.question-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.question-meta {
  font-size: 24rpx;
  color: #666;
}

.question-count {
  margin-right: 20rpx;
}

.question-status {
  font-size: 24rpx;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}

.question-status.not-started {
  background-color: #f5f5f5;
  color: #999;
}

.question-status.in-progress {
  background-color: #e6f7ff;
  color: #1296db;
}

.question-status.completed {
  background-color: #f6ffed;
  color: #52c41a;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  margin-top: 100rpx;
} 
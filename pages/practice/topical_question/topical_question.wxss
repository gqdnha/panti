.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #f5f6fa;
}

.content-wrapper {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: 100vh;
}

.progress-bar {
    background: #fff;
    padding: 20rpx 30rpx;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
}

.scroll-content {
    flex: 1;
    margin-top: 120rpx; /* 为顶部进度条留出空间 */
    margin-bottom: 120rpx; /* 为底部按钮留出空间 */
    height: calc(100vh - 240rpx);
}

.question-container {
    width: 80vw;
    background: #fff;
    border-radius: 20rpx;
    margin: 20rpx;
    padding: 30rpx;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.bottom-bar {
    position: fixed;
    bottom: 40rpx;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
    z-index: 100;
}

.btn {
    padding: 20rpx 40rpx;
    border-radius: 8rpx;
    font-size: 30rpx;
    text-align: center;
}

.prev {
    background-color: #f8f9fa;
    color: #666;
}

.submit {
    background-color: #0066cc;
    color: #fff;
    flex: 1;
    margin: 0 20rpx;
}

.next {
    background-color: #f8f9fa;
    color: #666;
    margin: auto;
}

/* 进度条样式 */
.progress-bar {
    width: 90%;
    background-color: #fff;
    padding: 20rpx;
    border-radius: 10rpx;
    margin: 0 auto 20rpx;
}

.progress-info {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10rpx;
    font-size: 28rpx;
    color: #333;
}

.progress-track {
    height: 10rpx;
    background-color: #e0e0e0;
    border-radius: 5rpx;
}

.progress-fill {
    height: 100%;
    background-color: #0066cc;
    border-radius: 5rpx;
    transition: width 0.3s ease;
}

.question-type {
    font-size: 28rpx;
    color: #0066cc;
    margin-bottom: 20rpx;
    padding: 10rpx 20rpx;
    background-color: #e6f0ff;
    border-radius: 20rpx;
    display: inline-block;
}

.question-content {
    font-size: 32rpx;
    color: #333;
    line-height: 1.6;
    margin-bottom: 30rpx;
}

.question-image {
    width: 100%;
    max-height: 400rpx;
    margin-top: 20rpx;
    border-radius: 8rpx;
}

/* 题目图片样式 */
.question-images {
    margin: 20rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.question-image {
    width: 100%;
    max-width: 600rpx;
    margin: 10rpx 0;
    border-radius: 8rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
    background-color: #f5f5f5;
}

/* 选项样式 */
.options-container {
    margin-top: 30rpx;
}

.option-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx;
    margin-bottom: 20rpx;
    background-color: #f8f9fa;
    border-radius: 8rpx;
    transition: all 0.3s ease;
    position: relative;
}

.option-item.selected {
    background-color: #e6f0ff;
    border: 2rpx solid #0066cc;
}

.option-item.correct.selected {
    border-color: #52c41a;
    background-color: rgba(82, 196, 26, 0.1);
    box-shadow: 0 0 5rpx rgba(82, 196, 26, 0.3);
    transition: all 0.3s ease;
}

.option-item.wrong.selected {
    border-color: #f5222d;
    background-color: rgba(245, 34, 45, 0.1);
    box-shadow: 0 0 5rpx rgba(245, 34, 45, 0.3);
    transition: all 0.3s ease;
}

.option-label {
    font-size: 30rpx;
    color: #0066cc;
    margin-right: 20rpx;
    font-weight: bold;
}

.option-content {
    font-size: 30rpx;
    color: #333;
    flex: 1;
}

.option-status {
    margin-left: 20rpx;
}

.status-icon {
    font-size: 36rpx;
    font-weight: bold;
}

.status-icon.correct {
    color: #52c41a;
}

.status-icon.wrong {
    color: #f5222d;
}

/* 判断题样式 */
.judge-options {
    display: flex;
    justify-content: center;
    gap: 40rpx;
}

.judge-item {
    padding: 20rpx 60rpx;
    background-color: #f8f9fa;
    border-radius: 8rpx;
    font-size: 32rpx;
    color: #333;
}

.judge-item.selected {
    background-color: #e6f0ff;
    border: 2rpx solid #0066cc;
    color: #0066cc;
}

.judge-item.correct.selected {
    border-color: #52c41a;
    background-color: rgba(82, 196, 26, 0.1);
    box-shadow: 0 0 5rpx rgba(82, 196, 26, 0.3);
    color: #52c41a;
    transition: all 0.3s ease;
}

.judge-item.wrong.selected {
    border-color: #f5222d;
    background-color: rgba(245, 34, 45, 0.1);
    box-shadow: 0 0 5rpx rgba(245, 34, 45, 0.3);
    color: #f5222d;
    transition: all 0.3s ease;
}

/* 填空题样式 */
.fill-blank-input {
    width: 80%;
    padding: 20rpx;
    border: 2rpx solid #e0e0e0;
    border-radius: 8rpx;
    font-size: 30rpx;
    margin-top: 20rpx;
}

.fill-blank-input.correct {
    border-color: #52c41a;
    box-shadow: 0 0 5rpx rgba(82, 196, 26, 0.3);
    transition: all 0.3s ease;
}

.fill-blank-input.wrong {
    border-color: #f5222d;
    box-shadow: 0 0 5rpx rgba(245, 34, 45, 0.3);
    transition: all 0.3s ease;
}

/* 答案解析弹窗样式 */
.analysis-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
}

.modal-content {
    width: 80%;
    max-height: 80vh;
    background-color: #fff;
    border-radius: 10rpx;
    padding: 30rpx;
    overflow-y: auto;
}

.result-header {
    text-align: center;
    margin-bottom: 30rpx;
}

.correct {
    color: #52c41a;
    font-size: 36rpx;
    font-weight: bold;
}

.wrong {
    color: #f5222d;
    font-size: 36rpx;
    font-weight: bold;
}

.correct-answer-section {
    margin: 20rpx 0;
    padding: 20rpx;
    background-color: rgba(82, 196, 26, 0.1);
    border-radius: 8rpx;
}

.correct-answer {
    display: flex;
    align-items: center;
    color: #52c41a;
    font-size: 28rpx;
}

.correct-answer .status-icon {
    margin-left: 10rpx;
}

.analysis-section {
    margin-top: 30rpx;
    padding: 20rpx;
    background-color: #f8f9fa;
    border-radius: 8rpx;
}

.analysis-content {
    font-size: 28rpx;
    color: #666;
    line-height: 1.6;
}

.analysis-title {
    color: #333;
    font-weight: bold;
    margin-right: 10rpx;
}

.knowledge-points {
    margin-bottom: 30rpx;
}

.knowledge-title {
    font-size: 30rpx;
    color: #0066cc;
    font-weight: bold;
    margin-right: 10rpx;
}

.modal-btns {
    display: flex;
    justify-content: space-between;
    gap: 20rpx;
}

.modal-btns .btn {
    flex: 1;
    background-color: #fd6854;
    background-color: #0066cc;
    color: #fff;
}
.view-detail-btn {
    margin-top: 50rpx;
}

/* 无数据展示样式 */
.no-data-container {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 100rpx 40rpx;
}

.no-data-icon {
    font-size: 120rpx;
    margin-bottom: 40rpx;
    opacity: 0.6;
}

.no-data-text {
    font-size: 32rpx;
    color: #999;
    margin-bottom: 20rpx;
}

.no-data-tip {
    font-size: 28rpx;
    color: #ccc;
    text-align: center;
    line-height: 1.5;
}

/* 图片预览模态框样式 */
.image-preview-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    z-index: 1000;
    display: none;
    justify-content: center;
    align-items: center;
}

.image-preview-modal.show {
    display: flex;
}

.image-preview-modal .modal-content {
    position: relative;
    width: 90%;
    height: 90%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: transparent;
}

.image-preview-modal .preview-image {
    max-width: 100%;
    max-height: 100%;
    position: relative;
    transform-origin: center center;
    will-change: transform;
    touch-action: none;
}

.image-preview-modal .close-btn {
    position: absolute;
    top: 80rpx;
    right: 0;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #fff;
    font-size: 40rpx;
    cursor: pointer;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 8rpx 0 0 8rpx;
    z-index: 1001;
}
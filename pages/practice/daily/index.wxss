.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #f5f6fa;
}

/* 进度条样式 */
.progress-bar {
    background-color: #fff;
    padding: 20rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.progress-info {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10rpx;
    font-size: 28rpx;
    color: #333;
}

.progress-track {
    height: 10rpx;
    background-color: #e0e0e0;
    border-radius: 5rpx;
}

.progress-fill {
    height: 100%;
    background-color: #0066cc;
    border-radius: 5rpx;
    transition: width 0.3s ease;
}

/* 题目容器样式 */
.question-container {
    width: 85vw;
    flex: 1;
    background-color: #fff;
    border-radius: 10rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    overflow-y: auto;
}

.question-type {
    font-size: 28rpx;
    color: #0066cc;
    margin-bottom: 20rpx;
    padding: 10rpx 20rpx;
    background-color: #e6f0ff;
    border-radius: 20rpx;
    display: inline-block;
}

.question-content {
    font-size: 32rpx;
    color: #333;
    line-height: 1.6;
    margin-bottom: 30rpx;
}

.question-image {
    width: 100%;
    max-height: 400rpx;
    margin-top: 20rpx;
    border-radius: 8rpx;
}

/* 选项样式 */
.options-container {
    margin-top: 30rpx;
}

.option-item {
    position: relative;
    padding: 20rpx;
    margin: 20rpx 0;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.option-item.selected {
    background-color: #e6f0ff;
    border: 2rpx solid #0066cc;
}

.option-item.correct.selected {
    border-color: #52c41a;
    background-color: rgba(82, 196, 26, 0.1);
    box-shadow: 0 0 5rpx rgba(82, 196, 26, 0.3);
    transition: all 0.3s ease;
}

.option-item.wrong.selected {
    border-color: #f5222d;
    background-color: rgba(245, 34, 45, 0.1);
    box-shadow: 0 0 5rpx rgba(245, 34, 45, 0.3);
    transition: all 0.3s ease;
}

.option-label {
    font-size: 30rpx;
    color: #0066cc;
    margin-right: 20rpx;
    font-weight: bold;
}

.option-content {
    flex: 1;
}

.mark {
    font-size: 40rpx;
    font-weight: bold;
    margin-left: 20rpx;
}

.option-item.selected.correct {
    background: #e8f5e9;
    border: 2rpx solid #4caf50;
}

.option-item.selected.wrong {
    background: #ffebee;
    border: 2rpx solid #f44336;
}

.option-item.selected.correct .mark {
    color: #4caf50;
}

.option-item.selected.wrong .mark {
    color: #f44336;
}

/* 判断题样式 */
.judge-options {
    display: flex;
    justify-content: center;
    gap: 40rpx;
}

.judge-item {
    padding: 20rpx 60rpx;
    background-color: #f8f9fa;
    border-radius: 8rpx;
    font-size: 32rpx;
    color: #333;
}

.judge-item.selected {
    background-color: #e6f0ff;
    border: 2rpx solid #0066cc;
    color: #0066cc;
}

.judge-item.correct.selected {
    border-color: #52c41a;
    background-color: rgba(82, 196, 26, 0.1);
    box-shadow: 0 0 5rpx rgba(82, 196, 26, 0.3);
    color: #52c41a;
    transition: all 0.3s ease;
}

.judge-item.wrong.selected {
    border-color: #f5222d;
    background-color: rgba(245, 34, 45, 0.1);
    box-shadow: 0 0 5rpx rgba(245, 34, 45, 0.3);
    color: #f5222d;
    transition: all 0.3s ease;
}

/* 填空题样式 */
.fill-blank-container {
    display: flex;
    align-items: center;
    width: 100%;
    position: relative;
}

.fill-blank-input {
    flex: 1;
    padding: 20rpx;
    border: 2rpx solid #e0e0e0;
    border-radius: 8rpx;
    margin-right: 20rpx;
}

.fill-blank-input.correct {
    border-color: #52c41a;
    box-shadow: 0 0 5rpx rgba(82, 196, 26, 0.3);
}

.fill-blank-input.wrong {
    border-color: #f5222d;
    box-shadow: 0 0 5rpx rgba(245, 34, 45, 0.3);
}

.fill-blank-container .mark {
    font-size: 40rpx;
    font-weight: bold;
    margin-left: 20rpx;
}

.fill-blank-container .mark.correct {
    color: #52c41a;
}

.fill-blank-container .mark.wrong {
    color: #f5222d;
}

/* 底部操作栏样式 */
.bottom-bar {
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
}

.btn {
    padding: 20rpx 40rpx;
    border-radius: 8rpx;
    font-size: 30rpx;
    text-align: center;
}

.prev {
    
    background-color: #f8f9fa;
    color: #666;
    width: 200rpx;
    height: 50rpx;
    margin-bottom: 50rpx;
    border-radius: 50rpx;
}

.submit {
    background-color: #0066cc;
    color: #fff;
    flex: 1;
    margin: 0 20rpx;
    height: 50rpx;
}

.next {
    background-color: #f8f9fa;
    color: #666;
    margin-left: 20rpx;
    width: 200rpx;
    height: 50rpx;
    margin-bottom: 50rpx;
    border-radius: 50rpx;
}

/* 答案解析区域样式 */
.analysis-section {
    margin-top: 40rpx;
    padding: 30rpx;
    background-color: #f8f9fa;
    border-radius: 10rpx;
    border: 2rpx solid #e0e0e0;
}

.analysis-header {
    text-align: center;
    margin-bottom: 20rpx;
    font-size: 32rpx;
    font-weight: bold;
}

.correct-answer {
    margin: 20rpx 0;
    font-size: 30rpx;
    color: #333;
    padding: 10rpx;
    background-color: #fff;
    border-radius: 8rpx;
}

.analysis-content {
    margin-top: 20rpx;
    font-size: 30rpx;
    color: #333;
    line-height: 1.6;
    padding: 10rpx;
    background-color: #fff;
    border-radius: 8rpx;
}

.analysis-title {
    color: #0066cc;
    font-weight: bold;
    margin-right: 10rpx;
}
.right-answer {
    color: red;
    font-weight: 800;
}

/* 答题卡弹窗样式 */
.answer-sheet-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
}

.answer-sheet-modal .modal-content {
    width: 80%;
    max-height: 80vh;
    background-color: #fff;
    border-radius: 10rpx;
    padding: 30rpx;
    overflow-y: auto;
}

.question-statuses {
    margin-bottom: 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.question-status-item {
    margin: 15rpx;
    height: 70rpx;
    width: 70rpx;
    display: flex;
    justify-content: center;
    align-items: center; 
    border: 1rpx solid rgb(177, 177, 177);
    margin-bottom: 10rpx;
    padding: 10rpx;
    border-radius: 8rpx;
    transition: all 0.3s ease;
}

/* 答题卡状态样式 */
.question-status-item.answered {
    background-color: #e6f0ff;
    border-color: #0066cc;
}

.question-status-item.unanswered {
    background-color: #f5f5f5;
    border-color: #d9d9d9;
}

.question-status-item.correct {
    background-color: #f6ffed;
    border-color: #52c41a;
}

.question-status-item.wrong {
    background-color: #fff2f0;
    border-color: #f5222d;
}

/* 答题卡文字颜色 */
.text-correct {
    color: #52c41a;
    font-weight: bold;
}

.text-wrong {
    color: #f5222d;
    font-weight: bold;
}

/* 移除不再需要的样式 */
.answered-highlight,
.unanswered-dark {
    display: none;
}

/* 新增：答题卡按钮样式 */
.answer-sheet-btn {
    padding: 20rpx 40rpx;
    border-radius: 8rpx;
    font-size: 30rpx;
    text-align: center;
    background-color: #f8f9fa;
    color: #666;
    margin: 20rpx 0;
}

.image-preview-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    z-index: 1000;
    display: none;
    justify-content: center;
    align-items: center;
}

.image-preview-modal.show {
    display: flex;
}

.image-preview-modal .modal-content {
    position: relative;
    width: 90%;
    height: 90%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.image-preview-modal .preview-image {
    max-width: 100%;
    max-height: 100%;
    position: relative;
    transform-origin: center center;
    will-change: transform;
    touch-action: none;
}

.image-preview-modal .close-btn {
    position: absolute;
    top: 80rpx;
    right: 0;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    color: #fff;
    font-size: 40rpx;
    cursor: pointer;
    background-color: rgba(0, 0, 0, 0.5);
    border-radius: 8rpx 0 0 8rpx;
    z-index: 1001;
}

/* 修改原有的题目图片样式 */
.question-images {
    margin: 20rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.question-image {
    width: 100%;
    height: 200rpx;
    margin: 10rpx 0;
    border-radius: 8rpx;
    object-fit: contain;
    display: block;
}    
/* 全局样式 */
page {
    font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
    height: 100vh;
    overflow: hidden;
}

/* 容器样式 */
.container {
    height: 100vh;
    background: linear-gradient(135deg, #cee3ff 0%, #dfcbe1 60%, #d8fdf7 100%);
    padding: 24rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}

/* 头部样式 */
.header {
    width: 100%;
    flex-shrink: 0;
}

.nav {
    display: flex;
    margin-left: 20rpx;
    margin-bottom: 30rpx;
}

.nav-item {
    padding: 12rpx 24rpx;
    margin-right: 20rpx;
    border-radius: 20rpx;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: #0f172a;
    font-size: 28rpx;
    transition: all 0.3s ease;
}

.nav-item.active {
    background: rgba(255, 255, 255, 0.2);
    color: #0f172a;
    font-weight: 600;
}

.nav-item:active {
    transform: scale(0.98);
    background: rgba(255, 255, 255, 0.25);
}

/* 内容区域样式 */
.content {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    padding: 0 15rpx;
    box-sizing: border-box;
    justify-content: space-between;
    flex: 1;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.category {
    margin-top: 30rpx;
    padding-left: 10rpx;
    padding-right: 10rpx;
    width: 45%;
    height: 250rpx;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 16rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    transition: all 0.3s ease;
}

.category:active {
    transform: scale(0.98);
    background: rgba(255, 255, 255, 0.2);
}

.category-name {
    font-size: 35rpx;
    text-align: center;
    color: #4a546b;
    font-weight: 600;
}

.category-status {
    font-size: 24rpx;
    color: #64748b;
}

.category-icon {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-size: contain;
    background-repeat: no-repeat;
    margin-top: 16rpx;
    filter: brightness(0) invert(0.3);
    opacity: 1;
}
/* 全局样式 */
page {
    font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
    height: 100vh;
    overflow: hidden;
}

/* 容器样式 */
.container {
    height: 100vh;
    width: 100vw;
    padding: 24rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    background: linear-gradient(135deg, #cee3ff 0%, #dfcbe1 60%, #d8fdf7 100%);
}

/* 头部样式 */
.header {
    width: 100%;
    flex-shrink: 0;
}

.nav {
    display: flex;
    margin-left: 20rpx;
    margin-bottom: 30rpx;
}

.nav-item {
    padding: 12rpx 24rpx;
    margin-right: 20rpx;
    border-radius: 20rpx;
    background-color: #e8e8e8;
    color: #666;
    font-size: 28rpx;
    transition: all 0.3s ease;
}

.nav-item.active {
    background-color: #1890ff;
    color: #fff;
    box-shadow: 0 4rpx 8rpx rgba(24, 144, 255, 0.2);
}

.nav-item:hover {
    transform: translateY(-2rpx);
    box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
}

/* 内容区域样式 */
.content {
    width: 100vw;
    display: flex;
    flex-wrap: wrap;
    padding: 0 15rpx;
    box-sizing: border-box;
    flex: 1;
    justify-content: center;
    align-self: center;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.category {
    margin-top: 2rpx;
    margin-left: 15rpx;
    margin-right: 15rpx;
    width: 300rpx;
    height: 200rpx;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 16rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    padding: 5rpx;
}

.category:hover {
    transform: translateY(-4rpx);
    box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.category-name {
    font-size: 30rpx;
    text-align: center;
    /* color: #fff; */
    color: #4a546b;
    font-weight: 600;
}



.category-icon {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-size: contain;
    background-repeat: no-repeat;
    margin-top: 16rpx;
    /* filter: brightness(0) invert(1); */
    opacity: 0.9;
    margin-bottom: 20rpx;
}
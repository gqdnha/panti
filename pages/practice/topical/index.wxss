/* pages/practice/topical/index.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f6fa;
}

/* 顶部分类选择样式 */
.category-header {
  background-color: #fff;
  padding: 20rpx;
}

.category-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.category-tabs {
  display: flex;
  overflow-x: auto;
  white-space: nowrap;
  padding-bottom: 10rpx;
}

.tab {
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  background-color: #f0f2f5;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s ease;
}

.tab.active {
  background-color: #0066cc;
  color: #fff;
}

/* 题目列表样式 */
.question-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.list-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.question-item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}

.question-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.question-type {
  font-size: 26rpx;
  color: #0066cc;
  background-color: #e6f0ff;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.question-status {
  font-size: 26rpx;
  color: #999;
}

.question-status.correct {
  color: #52c41a;
}

.question-status.wrong {
  color: #f5222d;
}

.question-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.question-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

/* 底部统计样式 */
.statistics {
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.stat-value {
  font-size: 32rpx;
  color: #0066cc;
  font-weight: bold;
}

/* 开始练习按钮样式 */
.start-practice {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #0066cc;
  color: #fff;
  padding: 20rpx 60rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 102, 204, 0.2);
}
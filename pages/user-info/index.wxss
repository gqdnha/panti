/* 功能列表 */
.function-list {
    margin: 50rpx 0 0 0;
    display: flex;
    flex-wrap: wrap;
    gap: 40rpx;
    justify-content: center;
}

.function-item {
    /* background: linear-gradient(135deg, #fff 60%, #e6ecfa 100%); */
    border-radius: 28rpx;
    box-shadow: 0 8rpx 32rpx rgba(30, 58, 109, 0.13);
    color: #1E3A6D;
    transition: box-shadow 0.2s, transform 0.2s;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 260rpx;
    height: 260rpx;
    font-weight: 600;
}

.function-item:active {
    box-shadow: 0 12rpx 40rpx rgba(30, 58, 109, 0.22);
    transform: translateY(-4rpx) scale(1.03);
}

.function-name {
    font-size: 36rpx;
    font-weight: 700;
    color: #1E3A6D;
    text-align: center;
    margin-top: 12rpx;
    margin-bottom: 8rpx;
    letter-spacing: 1rpx;
}

.function-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.1);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.function-item:active {
    transform: scale(0.98);
}

.function-item:active::before {
    opacity: 1;
}

.function-icon {
    width: 100rpx;
    height: 100rpx;
    margin-bottom: 18rpx;
    filter: brightness(0) invert(0.2);
    opacity: 1;
    transition: transform 0.3s ease;
}

.function-item:active .function-icon {
    transform: scale(0.95);
}

.function-name {
    font-size: 32rpx;
    font-weight: 600;
    color: #0f172a;
    text-align: center;
    margin-top: 16rpx;
    transition: transform 0.3s ease;
}

.function-item:active .function-name {
    transform: scale(0.95);
}

.arrow-icon {
    width: 32rpx;
    height: 32rpx;
    opacity: 0.3;
}

/* 退出登录按钮 */
.logout-section {
    margin: 60rpx 30rpx;
    text-align: center;
}

.logout-btn {
    /* background: linear-gradient(90deg, #fff 60%, #e6ecfa 100%); */
    color: #ff4d4f;
    border-radius: 44rpx;
    border: none;
    box-shadow: 0 8rpx 32rpx rgba(30, 58, 109, 0.13);
    font-size: 32rpx;
    width: 100%;
    height: 88rpx;
    transition: box-shadow 0.2s, transform 0.2s;
    font-weight: 700;
}

.logout-btn:active {
    box-shadow: 0 12rpx 40rpx rgba(30, 58, 109, 0.22);
    transform: translateY(-4rpx) scale(1.03);
    background: #ffecec;
}

.logout-btn:hover {
    background: rgba(255, 77, 79, 0.15);
    color: #ff4d4f;
}

.logout-btn:active {
    background: rgba(255, 77, 79, 0.2);
    color: #ff4d4f;
    transform: scale(0.98);
}

.logout-btn::after {
    border: none;
}

/* 错题数设置 */
.wrongCount {
    color: #ff4d4f;
    font-size: 28rpx;
    font-weight: 600;
    margin-top: 4rpx;
}
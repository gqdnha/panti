.container {
    min-height: 100vh;
    background-color: #f7f8fa;
    padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-card {
    background: linear-gradient(135deg, #4a90e2, #357abd);
    padding: 40rpx 30rpx;
    color: #fff;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    box-sizing: border-box;
}

.user-info {
    display: flex;
    align-items: center;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    border: 4rpx solid rgba(255, 255, 255, 0.4);
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.user-detail {
    margin-left: 30rpx;
}

.nickname {
    font-size: 36rpx;
    font-weight: 600;
    margin-bottom: 12rpx;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.phone {
    font-size: 28rpx;
    opacity: 0.9;
}

/* 统计数据 */
.stats-section {
    margin: 25rpx;
    background-color: #fff;
    padding: 25rpx;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16rpx;
    box-shadow: 0 4rpx 25rpx rgba(71, 189, 236, 0.05);
    border-radius: 25rpx;
}

.stats-item {
    text-align: center;
}

.stats-value {
    font-size: 40rpx;
    font-weight: 600;
    color: #4a90e2;
    margin-bottom: 8rpx;
}

.stats-label {
    font-size: 24rpx;
    color: #666;
}

/* 功能列表 */
.function-list {
    margin: 20rpx;
    background-color: #fff;
    border-radius: 12rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.function-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 24rpx;
    position: relative;
    width: 350rpx;
}

.function-item:not(:last-child)::after {
    content: '';
    position: absolute;
    left: 30rpx;
    right: 30rpx;
    bottom: 0;
    height: 1rpx;
    background-color: #f0f0f0;
}

.function-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 20rpx;
}

.function-name {
    flex: 1;
    font-size: 30rpx;
    color: #333;
}

.arrow-icon {
    width: 32rpx;
    height: 32rpx;
    opacity: 0.3;
}

/* 退出登录按钮 */
.logout-section {
    margin: 60rpx 30rpx;
    text-align: center;
}

.logout-btn {
    width: 100%;
    height: 88rpx;
    background-color: #fff;
    color: #ff4d4f;
    font-size: 32rpx;
    border-radius: 44rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
    transition: background-color 0.3s ease, color 0.3s ease;
}

.logout-btn:hover {
    background-color: #ff4d4f;
    color: #fff;
}

.logout-btn:active {
    background-color: #d9363e;
    color: #fff;
}

.logout-btn::after {
    border: none;
}
.container {
    min-height: 100vh;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    /* background: linear-gradient(135deg, #1E3A6D 0%, #2563A6 100%);  */
    position: relative;
    overflow: hidden;
    /* padding-top: 15vh; */
    padding: 24rpx;
    gap: 24rpx;
}

.container::before {
    content: '';
    position: absolute;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.10) 0%, rgba(255, 255, 255, 0) 70%);
    animation: rotate 20s linear infinite;
}

@keyframes rotate {
    from {
        transform: rotate(0deg);
    }

    to {
        transform: rotate(360deg);
    }
}

/* 用户信息卡片 */
.user-card {
    background: linear-gradient(135deg, #f8fafc 60%, #e6ecfa 100%);
    border-radius: 32rpx;
    border: none;
    box-shadow: 0 8rpx 32rpx rgba(30, 58, 109, 0.13);
    padding: 48rpx 36rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    min-height: 200rpx;
    width: 100%;
    box-sizing: border-box;
}

.nickname {
    font-size: 60rpx;
    font-weight: bold;
    color: #1E3A6D;
    margin-bottom: 8rpx;
}

.avatar-wrapper {
    position: relative;
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    overflow: hidden;
    border: 6rpx solid #2563A6;
    box-shadow: 0 4rpx 24rpx rgba(30, 58, 109, 0.13);
    flex-shrink: 0;
    background: #fff;
}

.avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.edit-avatar {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    font-size: 24rpx;
    padding: 8rpx;
    text-align: center;
    backdrop-filter: blur(4px);
}

.user-info {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
    align-items: flex-start;
    flex: 1;
    margin-left: 30rpx;
}


.phone {
    font-size: 26rpx;
    color: #2563A6;
    font-weight: 500;
}

.department {
    font-size: 26rpx;
    color: #2563A6;
    font-weight: 500;
}

/* 信息表单 */
.info-form {
    background: #fff;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 16rpx;
    padding: 32rpx;
    width: 100%;
    box-sizing: border-box;
}

.form-item {
    margin-bottom: 24rpx;
}

.form-label {
    font-size: 28rpx;
    color: #1e293b;
    margin-bottom: 12rpx;
    font-weight: 500;
}

.form-input {
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 12rpx;
    padding: 20rpx;
    font-size: 28rpx;
    color: #0f172a;
    width: 100%;
    box-sizing: border-box;
}

.form-input::placeholder {
    color: rgba(30, 41, 59, 0.5);
}

/* 按钮样式 */
.btn-group {
    display: flex;
    gap: 24rpx;
    margin-top: 32rpx;
}

.btn {
    flex: 1;
    padding: 24rpx;
    border-radius: 12rpx;
    font-size: 32rpx;
    font-weight: 500;
    text-align: center;
    transition: all 0.3s ease;
}

.btn-primary {
    background: rgba(96, 165, 250, 0.2);
    color: #0f172a;
    border: 1px solid rgba(96, 165, 250, 0.3);
}

.btn-default {
    background: rgba(255, 255, 255, 0.2);
    color: #0f172a;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.btn:active {
    transform: scale(0.98);
    opacity: 0.9;
}

/* 动画效果 */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20rpx);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.user-card,
.info-form {
    animation: fadeIn 0.5s ease forwards;
}

.info-form {
    animation-delay: 0.1s;
}

/* 设置图标 */
.setting {
    padding: 20rpx;
}

.setting-icon {
    width: 48rpx;
    height: 48rpx;
    opacity: 0.6;
}

/* 学习统计 */
.stats-section {
    background: linear-gradient(135deg, #fff 60%, #e6ecfa 100%);
    border-radius: 28rpx;
    box-shadow: 0 8rpx 32rpx rgba(30, 58, 109, 0.13);
    border: none;
    padding: 36rpx 0;
    width: 95%;
    margin: 0 auto;
}

.stats-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.stats-item {

    flex: 1;
    text-align: center;
}

.stats-center {
    justify-content: center;
    align-items: center;
    width: 100%;
    display: flex;
    flex-direction: column;
}

.stats-v-divider {
    width: 1rpx;
    height: 48rpx;
    background: #e6ecfa;
    margin: 0 32rpx;
}

.stats-h-divider {
    width: 100%;
    height: 1rpx;
    background: #e6ecfa;
    margin: 16rpx 0;
}


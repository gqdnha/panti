.container {
    min-height: 100vh;
    /* background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e1 50%, #f8b4bc 100%); */
    /* background: linear-gradient(135deg, #cee3ff 0%, #dfcbe1 60%, #d8fdf7 100%); */
    background: linear-gradient(135deg, #1E4B92 0%, #3A7BD5 100%);
    padding: 24rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 24rpx;
    align-items: center;
}

/* 用户信息卡片 */
.user-card {
    background: #fff;
    border-radius: 20rpx;
    border: 1rpx solid #e6ecfa;
    box-shadow: 0 8rpx 32rpx rgba(30,75,146,0.10), 0 1rpx 4rpx rgba(30,75,146,0.08);
    transition: box-shadow 0.2s, transform 0.2s;
    padding: 40rpx 32rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    min-height: 200rpx;
    width: 100%;
    box-sizing: border-box;
}
.nickname {
    font-size: 60rpx;
}

.avatar-wrapper {
    position: relative;
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    overflow: hidden;
    border: 4rpx solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
    flex-shrink: 0;
}

.avatar {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.edit-avatar {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.5);
    color: #fff;
    font-size: 24rpx;
    padding: 8rpx;
    text-align: center;
    backdrop-filter: blur(4px);
}

.user-info {
    display: flex;
    flex-direction: column;
    gap: 16rpx;
    align-items: flex-start;
    flex: 1;
    margin-left: 30rpx;
}


.phone {
    font-size: 25rpx;
    color: #64748b;
    font-weight: 500;
}

.department {
    width: 100%;
    font-size: 25rpx;
    color: #64748b;
    font-weight: 500;
}

/* 信息表单 */
.info-form {
    background: #fff;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 16rpx;
    padding: 32rpx;
    width: 100%;
    box-sizing: border-box;
}

.form-item {
    margin-bottom: 24rpx;
}

.form-label {
    font-size: 28rpx;
    color: #1e293b;
    margin-bottom: 12rpx;
    font-weight: 500;
}

.form-input {
    background: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 12rpx;
    padding: 20rpx;
    font-size: 28rpx;
    color: #0f172a;
    width: 100%;
    box-sizing: border-box;
}

.form-input::placeholder {
    color: rgba(30, 41, 59, 0.5);
}

/* 按钮样式 */
.btn-group {
    display: flex;
    gap: 24rpx;
    margin-top: 32rpx;
}

.btn {
    flex: 1;
    padding: 24rpx;
    border-radius: 12rpx;
    font-size: 32rpx;
    font-weight: 500;
    text-align: center;
    transition: all 0.3s ease;
}

.btn-primary {
    background: rgba(96, 165, 250, 0.2);
    color: #0f172a;
    border: 1px solid rgba(96, 165, 250, 0.3);
}

.btn-default {
    background: rgba(255, 255, 255, 0.2);
    color: #0f172a;
    border: 1px solid rgba(255, 255, 255, 0.3);
}

.btn:active {
    transform: scale(0.98);
    opacity: 0.9;
}

/* 动画效果 */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(20rpx);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.user-card, .info-form {
    animation: fadeIn 0.5s ease forwards;
}

.info-form {
    animation-delay: 0.1s;
}

/* 设置图标 */
.setting {
    padding: 20rpx;
}

.setting-icon {
    width: 48rpx;
    height: 48rpx;
    opacity: 0.6;
}

/* 学习统计 */
.stats-section {
    background: #fff;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
    border: 1px solid #e6ecfa;
    border-radius: 16rpx;
    padding: 40rpx;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16rpx;
}

.stats-item {
    text-align: center;
    border-right: 1rpx solid #e6ecfa;
}
.stats-item:last-child {
    border-right: none;
}

.stats-value {
    font-size: 40rpx;
    font-weight: 600;
    color: #0f172a;
    margin-bottom: 8rpx;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.stats-label {
    font-size: 24rpx;
    color: #64748b;
}

.stats-divider {
    width: 1rpx;
    background: #e6ecfa;
    margin: 0 0.5em;
    height: 60rpx;
    align-self: center;
    display: inline-block;
}

/* 移除.stats-row、.stats-v-divider、.stats-h-divider样式 */
.stats-row {}
.stats-v-divider {}
.stats-h-divider {}

/* 功能列表 */
.function-list {
    margin: 50rpx;
    display: flex;
    flex-wrap: wrap;
    gap: 40rpx;
    justify-content: center;
}

.function-item {
    background: #fff;
    border-radius: 20rpx;
    border: 1rpx solid #e6ecfa;
    box-shadow: 0 8rpx 32rpx rgba(30,75,146,0.10), 0 1rpx 4rpx rgba(30,75,146,0.08);
    color: #1E4B92;
    transition: box-shadow 0.2s, transform 0.2s;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 250rpx;
    height: 250rpx;
}
.function-item:active {
    box-shadow: 0 12rpx 40rpx rgba(30,75,146,0.16), 0 2rpx 8rpx rgba(30,75,146,0.12);
    transform: translateY(-4rpx) scale(1.02);
}
.function-name {
    color: #1E4B92;
}

.function-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.1);
    opacity: 0;
    transition: opacity 0.3s ease;
}

.function-item:active {
    transform: scale(0.98);
}

.function-item:active::before {
    opacity: 1;
}

.function-icon {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 20rpx;
    filter: brightness(0) invert(0.3);
    opacity: 1;
    transition: transform 0.3s ease;
}

.function-item:active .function-icon {
    transform: scale(0.95);
}

.function-name {
    font-size: 32rpx;
    font-weight: 600;
    color: #0f172a;
    text-align: center;
    margin-top: 16rpx;
    transition: transform 0.3s ease;
}

.function-item:active .function-name {
    transform: scale(0.95);
}

.arrow-icon {
    width: 32rpx;
    height: 32rpx;
    opacity: 0.3;
}

/* 退出登录按钮 */
.logout-section {
    margin: 60rpx 30rpx;
    text-align: center;
}

.logout-btn {
    background: #fff;
    color: #ff4d4f;
    border-radius: 44rpx;
    border: 1rpx solid #e6ecfa;
    box-shadow: 0 8rpx 32rpx rgba(30,75,146,0.10), 0 1rpx 4rpx rgba(30,75,146,0.08);
    font-size: 32rpx;
    width: 100%;
    height: 88rpx;
    transition: box-shadow 0.2s, transform 0.2s;
}
.logout-btn:active {
    box-shadow: 0 12rpx 40rpx rgba(30,75,146,0.16), 0 2rpx 8rpx rgba(30,75,146,0.12);
    transform: translateY(-4rpx) scale(1.02);
}

.logout-btn:hover {
    background: rgba(255, 77, 79, 0.15);
    color: #ff4d4f;
}

.logout-btn:active {
    background: rgba(255, 77, 79, 0.2);
    color: #ff4d4f;
    transform: scale(0.98);
}

.logout-btn::after {
    border: none;
}    
<!--pages/user-info/index.wxml-->
<view class="container">
    <!-- 用户信息卡片 -->
    <view class="user-card">
        <view class="user-info">
            <image class="avatar" src="{{userInfo.avatarUrl || '/assets/icons/user.png'}}" mode="aspectFill"></image>
            <view class="user-detail">
                <view class="nickname">{{userInfo.nickName || '未登录'}}</view>
                <view class="phone">{{userInfo.phone || '点击登录'}}</view>
            </view>
        </view>
        <!-- 设置 -->
        <view class="setting" bindtap="navigateToSettings">
            <image class="setting-icon" src="/assets/icons/setting.png" mode="aspectFit"></image>
            <!-- <text class="function-name">设置</text> -->
        </view>
    </view>

    <!-- 学习统计 -->
    <view class="stats-section">
        <view class="stats-item">
            <view class="stats-value">{{studyStats.totalQuestions}}</view>
            <view class="stats-label">总题数</view>
        </view>
        <view class="stats-item">
            <view class="stats-value">{{studyStats.correctRate}}%</view>
            <view class="stats-label">正确率</view>
        </view>
        <view class="stats-item">
            <view class="stats-value">{{studyStats.totalTime}}</view>
            <view class="stats-label">学习时长(分钟)</view>
        </view>
    </view>

    <!-- 功能列表 -->
    <view class="function-list">
        <!-- <view class="function-item" bindtap="navigateToHistory">
      <image class="function-icon" src="/images/history.png" mode="aspectFit"></image>
      <text class="function-name">答题历史</text>
      <image class="arrow-icon" src="/assets/icons/arrow-right.png" mode="aspectFit"></image>
    </view> -->
        <!-- <view class="function-item" bindtap="navigateToFavorites">
      <image class="function-icon" src="/images/favorite.png" mode="aspectFit"></image>
      <text class="function-name">我的收藏</text>
      <image class="arrow-icon" src="/assets/icons/arrow-right.png" mode="aspectFit"></image>
    </view> -->

    </view>

    <!-- 退出登录按钮 -->
    <view class="logout-section" wx:if="{{userInfo}}">
        <!-- <button class="logout-btn" bindtap="handleLogout">退出登录</button> -->
        <button class="logout-btn" bindtap="handleLogout"> 退出登录 </button>
    </view>
</view>
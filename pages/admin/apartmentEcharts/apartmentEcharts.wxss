.container {
    padding: 20rpx;
    box-sizing: border-box;
    min-height: 100vh;
    background: #f5f5f5;
  }
  .echarts {
    width: 100%;
    height: 300rpx;
  }
  .ec-canvas {
    width: 100%;
    height: 100%;
    display: block;
  }
  
.chart-container {
  display: block;
  width: 100%;
  height: 900rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  box-sizing: border-box;
}

.picker {
  margin-bottom: 30rpx;
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
}
  
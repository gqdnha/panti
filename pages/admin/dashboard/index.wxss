.container {
    min-height: 100vh;
    /* background: linear-gradient(135deg, #cee3ff 0%, #dfcbe1 60%, #b4f8ed 100%); */
    /* background: linear-gradient(135deg, #cee3ff 0%, #dfcbe1 60%, #d8fdf7 100%); */
    background: linear-gradient(135deg, #1E4B92 0%, #3A7BD5 100%);
    padding: 0rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: start;
}

/* 顶部统计卡片 */
.stats-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24rpx;
    padding: 24rpx;
}

.stats-card {
    background: rgba(255, 255, 255, 0.15);
    border-radius: 16rpx;
    padding: 24rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.stats-card:active {
    transform: scale(0.98);
    background: rgba(255, 255, 255, 0.2);
}

.stats-title {
    font-size: 28rpx;
    color: #1e293b;
    margin-bottom: 16rpx;
    font-weight: 500;
}

.stats-value {
    font-size: 40rpx;
    color: #0f172a;
    font-weight: 600;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 功能卡片 */
.function-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 24rpx;
    padding: 24rpx;
}

.function-card {
    background: #fff;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
    border-radius: 16rpx;
    padding: 32rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 16rpx;
    height: 240rpx;
    justify-content: center;
}

.function-card:active {
    transform: scale(0.98);
    background: rgba(255, 255, 255, 0.2);
}

.card-icon {
    width: 80rpx;
    height: 80rpx;
    filter: brightness(0) invert(0.2);
    opacity: 1;
}

.card-title {
    font-size: 32rpx;
    color: #0f172a;
    font-weight: 600;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.card-desc {
    font-size: 24rpx;
    color: #334155;
    text-align: center;
    line-height: 1.4;
    
}

/* 动画效果 */
@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

.stats-card, .function-card {
    animation: fadeIn 0.5s ease forwards;
}

.stats-card:nth-child(2) {
    animation-delay: 0.1s;
}

.stats-card:nth-child(3) {
    animation-delay: 0.2s;
}

.function-card:nth-child(2) {
    animation-delay: 0.1s;
}

.function-card:nth-child(3) {
    animation-delay: 0.2s;
}

.function-card:nth-child(4) {
    animation-delay: 0.3s;
}

/* 用户列表样式 */
.user-list {
    background: #fff;
    border-radius: 16rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
    overflow: hidden;
}

.section-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
    padding: 24rpx;
    background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 100%);
    color: #fff;
}

.list-header {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 2fr;
    padding: 20rpx 24rpx;
    font-size: 26rpx;
    color: #fff;
    background: rgba(96, 165, 250, 0.2);
    font-weight: 500;
    backdrop-filter: blur(8px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

.list-content {
    max-height: 600rpx;
    overflow-y: auto;
}

.list-item {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 2fr;
    padding: 24rpx;
    align-items: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
}

.list-item:active {
    background: rgba(255, 255, 255, 0.15);
}

.item-user {
    display: flex;
    align-items: center;
}

.user-avatar {
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    margin-right: 16rpx;
    border: 2rpx solid rgba(255, 255, 255, 0.3);
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-name {
    font-size: 28rpx;
    color: #fff;
    font-weight: 500;
}

.item-count,
.item-rate {
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.9);
    text-align: center;
}

.item-actions {
    display: flex;
    gap: 12rpx;
    justify-content: flex-end;
}

.action-btn {
    min-width: 120rpx;
    font-size: 26rpx;
    padding: 12rpx 24rpx;
    border-radius: 30rpx;
    background: rgba(255, 255, 255, 0.15);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.3);
    line-height: 1.5;
    text-align: center;
    transition: all 0.3s ease;
}

.action-btn:active {
    transform: scale(0.95);
    background: rgba(255, 255, 255, 0.2);
}

.action-btn.export {
    background: rgba(82, 196, 26, 0.2);
    color: #fff;
    border: 1px solid rgba(82, 196, 26, 0.3);
}

/* 题目管理样式 */
.question-manage {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.manage-buttons {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 16rpx;
    padding: 24rpx;
}

.manage-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16rpx;
    padding: 32rpx;
    font-size: 30rpx;
    color: #fff;
    background: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 16rpx;
    font-weight: 500;
    transition: all 0.3s ease;
}

.manage-btn:active {
    transform: scale(0.98);
    background: rgba(255, 255, 255, 0.2);
}

.btn-icon {
    width: 48rpx;
    height: 48rpx;
    filter: brightness(0) invert(1);
    opacity: 0.9;
}

/* 去除按钮默认样式 */
button {
    padding: 0;
    line-height: normal;
    background: none;
}

button::after {
    border: none;
}

.stats-card, .function-card {
    background: #fff;
    border-radius: 20rpx;
    border: 1rpx solid #e6ecfa;
    box-shadow: 0 8rpx 32rpx rgba(30,75,146,0.10), 0 1rpx 4rpx rgba(30,75,146,0.08);
    transition: box-shadow 0.2s, transform 0.2s;
}
.stats-card:active, .function-card:active {
    box-shadow: 0 12rpx 40rpx rgba(30,75,146,0.16), 0 2rpx 8rpx rgba(30,75,146,0.12);
    transform: translateY(-4rpx) scale(1.02);
}
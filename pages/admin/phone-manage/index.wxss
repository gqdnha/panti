.container {
    min-height: 100vh;
    background: linear-gradient(135deg, #cee3ff 0%, #dfcbe1 60%, #d8fdf7 100%);
    padding: 24rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 搜索栏样式 */
.search-bar {
    display: flex;
    gap: 16rpx;
    margin-bottom: 24rpx;
    width: 90%;
    max-width: 1200rpx;
}

.search-bar input {
    flex: 1;
    height: 72rpx;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 8rpx;
    padding: 0 24rpx;
    font-size: 28rpx;
    color: #1e293b;
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.search-btn, .add-btn {
    width: 120rpx;
    height: 72rpx;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: #1e293b;
    font-weight: 500;
}

.search-btn {
    background: rgba(24, 144, 255, 0.2);
}

.add-btn {
    background: rgba(82, 196, 26, 0.2);
}

/* 列表样式 */
.phone-list {
    background: rgba(255, 255, 255, 0.15);
    border-radius: 16rpx;
    overflow: auto;
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    width: 90%;
    max-width: 1200rpx;
}

.question-table {
    width: 100%;
    border-collapse: collapse;
}

.list-header {
    background: rgba(255, 255, 255, 0.1);
}

.table-header {
    display: grid;
    grid-template-columns: 1fr 3fr 1fr;
    padding: 24rpx;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

.header-item {
    font-size: 28rpx;
    color: #1e293b;
    font-weight: 500;
    text-align: center;
}

.list-content {
    max-height: 800rpx;
    overflow-y: auto;
}

.list-item {
    display: grid;
    grid-template-columns: 1fr 3fr 1fr;
    padding: 24rpx;
    align-items: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(255, 255, 255, 0.05);
    transition: all 0.3s ease;
}

.list-item:active {
    background: rgba(255, 255, 255, 0.1);
}

.user-name, .user-count {
    font-size: 28rpx;
    color: #1e293b;
    text-align: center;
}

.item-actions {
    display: flex;
    gap: 16rpx;
    justify-content: center;
}

.btn {
    padding: 8rpx 24rpx;
    border-radius: 6rpx;
    font-size: 24rpx;
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    font-weight: 500;
}

.btn.edit {
    background: rgba(24, 144, 255, 0.2);
    color: #1e293b;
}

.btn.delete {
    background: rgba(255, 77, 79, 0.2);
    color: #1e293b;
}

/* 弹窗样式 */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(4px);
}

.modal-content {
    width: 600rpx;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 16rpx;
    padding: 32rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.modal-title {
    font-size: 32rpx;
    font-weight: 500;
    margin-bottom: 24rpx;
    text-align: center;
    color: #1e293b;
}

.modal-content input {
    width: 80%;
    height: 80rpx;
    background: #f5f7fa;
    border-radius: 8rpx;
    padding: 0 24rpx;
    margin-bottom: 24rpx;
    font-size: 28rpx;
    border: 1px solid #e8e8e8;
    color: #1e293b;
}

.modal-buttons {
    display: flex;
    gap: 24rpx;
}

.modal-buttons .btn {
    flex: 1;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
    font-weight: 500;
}

.btn.cancel {
    background: #f5f7fa;
    color: #1e293b;
}

.btn.confirm {
    background: #1890ff;
    color: #fff;
} 
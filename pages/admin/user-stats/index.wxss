/* 操作按钮组 */
.item-actions {
    display: flex;
    /* gap: 16rpx; */
    justify-content: center;
}

.btn {
    width: 50rpx;
    font-size: 20rpx;
    padding: 16rpx 32rpx;
    border-radius: 12rpx;
    transition: all 0.2s ease;
    text-align: center;
}

.btn.edit {
    background: rgba(74, 144, 226, 0.1);
    color: #4a90e2;
    /* border: 1rpx solid rgba(74, 144, 226, 0.3); */
}

.btn.edit:active {
    background: rgba(74, 144, 226, 0.2);
}

.btn.export {
    background: #f6ffed;
    color: #52c41a;
    /* border: 1rpx solid rgba(245, 34, 45, 0.3); */
}

.btn.export:active {
    background: rgba(245, 34, 45, 0.2);
}

.question-table {
    width: 100%;
    border-collapse: collapse;
}

.list-header th {
    padding: 16rpx;
    text-align: left;
}

.list-content td {
    padding: 16rpx;
}

/* 添加按钮 */
.add-button {
    position: fixed;
    right: 48rpx;
    bottom: 48rpx;
    width: 120rpx;
    height: 120rpx;
    background: linear-gradient(135deg, #6c5ce7, #4b4bff);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 12rpx 32rpx rgba(108, 92, 231, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.add-button:active {
    transform: scale(0.95) translateY(4rpx);
    box-shadow: 0 6rpx 24rpx rgba(108, 92, 231, 0.3);
}

.add-icon {
    width: 56rpx;
    height: 56rpx;
    filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

/* 全局按钮样式重置 */
button {
    margin: 0;
    padding: 0;
    line-height: 1.5;
    background: none;
    border-radius: 0;
}

button::after {
    display: none;
}


/* 分页按钮样式 */
.pagination {
    display: flex;
    justify-content: center;
    margin: 20rpx;
}

.pagination button {
    padding: 16rpx 32rpx;
    background-color: #4a90e2;
    color: #ffffff;
    border: none;
    border-radius: 8rpx;
    font-size: 24rpx;
    margin: 0 10rpx;
}

.pagination button[disabled] {
    background-color: #ccc;
    cursor: not-allowed;
}


/* 搜索框样式 */
.search-box {
    padding: 20rpx;
    background-color: #ffffff;
    display: flex;
    gap: 16rpx;
}

.search-box input {
    flex: 1;
    padding: 16rpx;
    border: 1rpx solid #ccc;
    border-radius: 8rpx;
    font-size: 24rpx;
}

.search-box button {
    padding: 16rpx 32rpx;
    background-color: #4a90e2;
    color: #ffffff;
    border: none;
    border-radius: 8rpx;
    font-size: 24rpx;
}


.modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
}

.modal-container {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    z-index: 1000;
    width: 80%;
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.close-btn {
    font-size: 20px;
    cursor: pointer;
}

.detail-item {
    margin-bottom: 10px;
}

.detail-item label {
    font-weight: bold;
    margin-right: 10px;
}

.function {
    display: flex;
    flex-direction: row;
    justify-content: center;
    grid-gap: 50rpx;
}
.function-item button{
    padding: 10rpx 10rpx;
    font-size: 30rpx;
    background-color: rgb(116, 241, 116);
    width: 200rpx;
    border-radius: 30rpx;
}


/* 添加按钮 */
.add-button {
    position: fixed;
    right: 48rpx;
    bottom: 48rpx;
    width: 120rpx;
    height: 120rpx;
    background: linear-gradient(135deg, #6c5ce7, #4b4bff);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 12rpx 32rpx rgba(108, 92, 231, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.add-button:active {
    transform: scale(0.95) translateY(4rpx);
    box-shadow: 0 6rpx 24rpx rgba(108, 92, 231, 0.3);
}

.add-icon {
    width: 56rpx;
    height: 56rpx;
    filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
}

/* 全局按钮样式重置 */
button {
    margin: 0;
    padding: 0;
    line-height: 1.5;
    background: none;
    border-radius: 0;
}

button::after {
    display: none;
}


/* 分页按钮样式 */
.pagination {
    display: flex;
    justify-content: center;
    gap: 24rpx;
    margin: 30rpx 0;
    padding: 0 20rpx;
}

.pagination button {
    min-width: 180rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 40rpx;
    font-size: 28rpx;
    font-weight: 500;
    letter-spacing: 2rpx;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.pagination button:first-child {
    background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
    color: #2d3436;
    box-shadow: 0 8rpx 16rpx rgba(168, 237, 234, 0.2);
}

.pagination button:last-child {
    background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
    color: #2d3436;
    box-shadow: 0 8rpx 16rpx rgba(246, 211, 101, 0.2);
}

.pagination button:active {
    transform: translateY(2rpx);
    opacity: 0.9;
}

.pagination button:first-child:active {
    box-shadow: 0 4rpx 8rpx rgba(168, 237, 234, 0.2);
}

.pagination button:last-child:active {
    box-shadow: 0 4rpx 8rpx rgba(246, 211, 101, 0.2);
}

.pagination button[disabled] {
    background: #f5f5f5;
    color: #999;
    box-shadow: none;
    cursor: not-allowed;
    opacity: 0.7;
}


/* 搜索框样式 */
.search-box {
    padding: 20rpx;
    background-color: #ffffff;
    display: flex;
    gap: 16rpx;
}

.search-box input {
    flex: 1;
    padding: 16rpx;
    border: 1rpx solid #ccc;
    border-radius: 8rpx;
    font-size: 24rpx;
}

.search-box button {
    padding: 16rpx 32rpx;
    background-color: #4a90e2;
    color: #ffffff;
    border: none;
    border-radius: 8rpx;
    font-size: 24rpx;
}


/* 用户详情弹窗样式 */
.user-detail-modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 999;
    backdrop-filter: blur(4px);
}

.user-detail-modal-container {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 85%;
    background: #fff;
    border-radius: 20rpx;
    z-index: 1000;
    box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.08);
}

.user-detail-modal-header {
    padding: 32rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1rpx solid #f5f5f5;
}

.user-detail-modal-header text {
    font-size: 34rpx;
    font-weight: 600;
    color: #1a1a1a;
}

.user-detail-close-btn {
    width: 48rpx;
    height: 48rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    color: #999;
    cursor: pointer;
    border-radius: 50%;
    transition: all 0.2s;
}

.user-detail-close-btn:active {
    background: #f5f5f5;
}

.user-detail-modal-body {
    padding: 32rpx;
}

.user-detail-item {
    display: flex;
    align-items: center;
    margin-bottom: 28rpx;
    padding: 24rpx;
    background: #fafafa;
    border-radius: 16rpx;
}

.user-detail-item:last-child {
    margin-bottom: 0;
}

.user-detail-item label {
    width: 160rpx;
    color: #666;
    font-size: 28rpx;
}

.user-detail-item text {
    flex: 1;
    color: #333;
    font-size: 28rpx;
    font-weight: 500;
}


/* 页面容器 */
.container {
    min-height: 100vh;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    padding: 0rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: start;
}

/* 操作按钮区域 */
.action-buttons {
    display: flex;
    gap: 24rpx;
    /* margin-bottom: 48rpx; */
}

.action-btn {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 160rpx;
    background: #ffffff;
    border-radius: 24rpx;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-btn:active {
    transform: translateY(4rpx);
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.btn-icon {
    width: 64rpx;
    height: 64rpx;
    margin-bottom: 16rpx;
}

.action-btn text {
    font-size: 28rpx;
    color: #2d3436;
    font-weight: 500;
    letter-spacing: 0.5rpx;
}

/* 导入/导出按钮特色样式 */
.action-btn.import {
    background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.action-btn.export {
    background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
}

/* 题目列表 */
.question-list {
    background: #ffffff;
    border-radius: 24rpx;
    overflow: auto;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.list-header {
    width: 100vw;
    display: grid;
    padding: 20rpx;
    font-size: 28rpx;
    color: #636e72;
    background: #f8f9fa;
    font-weight: 600;
}

.table-header {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
}
.header-item {
    margin: auto;
}


.list-content {
    max-height: calc(100vh - 400rpx);
    overflow-y: auto;
}

/* 列表项 */
.list-item {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    padding: 32rpx;
    align-items: center;
    transition: all 0.3s ease;
}

.list-item:active {
    background: rgba(241, 242, 244, 0.5);
}

.question-id {
    font-size: 22rpx;
    text-align: center;
}

.user-name {
    text-align: center;
    font-size: 25rpx;
    color: #2d3436;
    font-weight: 500;
    line-height: 1.4;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}


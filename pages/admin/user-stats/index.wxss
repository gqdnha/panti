.container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding: 20rpx;
}

.user-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.list-header {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 2fr;
  padding: 24rpx;
  font-size: 26rpx;
  color: #666;
  background: #f8f9fa;
  font-weight: 500;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-content {
  max-height: calc(100vh - 180rpx);
  overflow-y: auto;
}

.list-item {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr 2fr;
  padding: 24rpx;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fff;
  transition: all 0.3s ease;
}

.list-item:active {
  background: #f8f9fa;
}

.item-user {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.user-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.item-count, .item-rate {
  font-size: 28rpx;
  color: #666;
  text-align: center;
}

.item-actions {
  display: flex;
  gap: 12rpx;
  justify-content: flex-end;
}

.action-btn {
  min-width: 120rpx;
  font-size: 26rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  background: #f0f8ff;
  color: #4a90e2;
  border: none;
  line-height: 1.5;
  text-align: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.action-btn.export {
  background: #f6ffed;
  color: #52c41a;
}

/* 去除按钮默认样式 */
button {
  padding: 0;
  line-height: normal;
  background: none;
}

button::after {
  border: none;
}

/* 用户信息样式 */
.user-info {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.user-detail {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-meta {
  display: flex;
  gap: 20rpx;
}

.meta-item {
  font-size: 28rpx;
  color: #666;
}

/* 答题统计样式 */
.stats-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stats-item {
  text-align: center;
}

.stats-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #1296db;
  margin-bottom: 6rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 答题记录样式 */
.answer-records {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.record-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.record-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.record-item:last-child {
  border-bottom: none;
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.record-title {
  font-size: 28rpx;
  font-weight: bold;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.record-info {
  display: flex;
  gap: 20rpx;
}

.info-item {
  font-size: 24rpx;
  color: #666;
}

/* 答题趋势样式 */
.trend-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.trend-chart {
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}

.chart-placeholder {
  color: #999;
  font-size: 28rpx;
} 
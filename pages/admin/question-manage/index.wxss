/* 页面容器 */
.container {
    min-height: 100vh;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    padding: 0rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: start;
}

/* 搜索框样式 */
.search-box {
    padding: 24rpx 20rpx 16rpx;
    background-color: #fff;
    margin: 0 20rpx;
    border-radius: 16rpx;
    display: flex;
    gap: 16rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.search-input-wrapper {
    flex: 1;
    height: 72rpx;
    background: #f8f9fa;
    border-radius: 36rpx;
    display: flex;
    align-items: center;
    padding: 0 24rpx;
    transition: all 0.3s ease;
    border: 1rpx solid transparent;
}

.search-input-wrapper:focus-within {
    background: #fff;
    border-color: #e6e8eb;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.search-icon {
    width: 36rpx;
    height: 36rpx;
    opacity: 0.4;
}

.search-input {
    flex: 1;
    height: 100%;
    padding: 0 16rpx;
    font-size: 26rpx;
    background: transparent;
    color: #333;
}

.search-clear {
    width: 36rpx;
    height: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.4;
    transition: opacity 0.2s ease;
}

.search-clear:active {
    opacity: 0.6;
}

.clear-icon {
    width: 28rpx;
    height: 28rpx;
}

.search-button {
    width: 140rpx;
    height: 72rpx;
    background: linear-gradient(135deg, #4a90e2, #357abd);
    color: #fff;
    font-size: 26rpx;
    border-radius: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.15);
    font-weight: 500;
}

.search-button:active {
    transform: translateY(2rpx);
    opacity: 0.95;
}

/* 操作按钮区域 */
.action-buttons {
    display: flex;
    gap: 24rpx;
    padding: 20rpx;
}

.action-btn {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 160rpx;
    background: #ffffff;
    border-radius: 24rpx;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-btn:active {
    transform: translateY(4rpx);
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.btn-icon {
    width: 64rpx;
    height: 64rpx;
    margin-bottom: 16rpx;
}

.action-btn text {
    font-size: 28rpx;
    color: #2d3436;
    font-weight: 500;
    letter-spacing: 0.5rpx;
}

/* 导入/导出按钮特色样式 */
.action-btn.import {
    background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.action-btn.export {
    background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
}

/* 题目列表 */
.question-list {
    background: #ffffff;
    border-radius: 24rpx;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
    margin: 20rpx;
    margin-top: 0;
    display: flex;
    flex-direction: column;
    height: calc(100vh - 340rpx);
}

/* 表头样式 */
.list-header {
    display: grid;
    grid-template-columns: 100rpx 1fr 180rpx 200rpx;
    background: #f8f9fa;
    padding: 24rpx 32rpx;
    font-size: 24rpx;
    color: #666;
    font-weight: 600;
    position: sticky;
    top: 0;
    z-index: 1;
    border-bottom: 2rpx solid #eee;
}

.header-item {
    display: flex;
    align-items: center;
    justify-content: center;
}

.header-item.title {
    justify-content: flex-start;
}

/* 内容区域样式 */
.list-content {
    overflow: hidden;
    flex: 1;
    height: 100%;
}

.list-item {
    display: grid;
    grid-template-columns: 100rpx 1fr 180rpx 200rpx;
    padding: 24rpx 32rpx;
    align-items: center;
    border-bottom: 1rpx solid #f0f0f0;
    transition: background-color 0.2s ease;
}

.list-item:last-child {
    border-bottom: none;
}

.list-item:active {
    background-color: #f8f9fa;
}

.question-id {
    font-size: 26rpx;
    color: #666;
    text-align: center;
}

.question-title {
    font-size: 26rpx;
    color: #333;
    line-height: 1.4;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    padding-right: 20rpx;
}

.question-type {
    font-size: 24rpx;
    color: #666;
    text-align: center;
    padding: 8rpx 16rpx;
    background: #f5f7fa;
    border-radius: 6rpx;
    margin: 0 auto;
}

.item-actions {
    display: flex;
    gap: 16rpx;
    justify-content: center;
}

.item-actions .btn {
    padding: 8rpx 20rpx;
    font-size: 24rpx;
    border-radius: 6rpx;
    transition: all 0.2s ease;
}

.item-actions .btn.edit {
    color: #4a90e2;
    background: rgba(74, 144, 226, 0.1);
}

.item-actions .btn.delete {
    color: #ff4d4f;
    background: rgba(255, 77, 79, 0.1);
}

.item-actions .btn:active {
    opacity: 0.8;
}

/* 自定义滚动条样式 */
::-webkit-scrollbar {
    width: 6rpx;
    background: transparent;
}

::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.1);
    border-radius: 3rpx;
}

/* 操作按钮组 */
.item-actions {
    display: flex;
    gap: 16rpx;
    justify-content: flex-end;
}

/* 列表操作按钮样式 */
.item-actions .btn {
    width: 50rpx;
    font-size: 20rpx;
    padding: 8rpx 14rpx;
    border-radius: 12rpx;
    transition: all 0.2s ease;
    text-align: center;
}

.item-actions .btn.edit {
    background: rgba(74, 144, 226, 0.1);
    color: #4a90e2;
    border: 1rpx solid rgba(74, 144, 226, 0.3);
}

.item-actions .btn.edit:active {
    background: rgba(74, 144, 226, 0.2);
}

.item-actions .btn.delete {
    background: rgba(245, 34, 45, 0.1);
    color: #f5222d;
    border: 1rpx solid rgba(245, 34, 45, 0.3);
}

.item-actions .btn.delete:active {
    background: rgba(245, 34, 45, 0.2);
}

.question-table {
    width: 100%;
    border-collapse: collapse;
}

.list-header th {
    border-bottom: 2rpx solid #ccc;
    padding: 16rpx;
    text-align: left;
}

.list-content td {
    /* border-bottom: 1rpx solid #eee; */
    padding: 16rpx;
}

/* 分页按钮样式 */
.pagination {
    display: flex;
    justify-content: center;
    gap: 24rpx;
    margin: 30rpx 0;
    padding: 0 20rpx;
}

.pagination button {
    min-width: 180rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 40rpx;
    font-size: 28rpx;
    font-weight: 500;
    letter-spacing: 2rpx;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.pagination button:first-child {
    background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
    color: #2d3436;
    box-shadow: 0 8rpx 16rpx rgba(168, 237, 234, 0.2);
}

.pagination button:last-child {
    background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
    color: #2d3436;
    box-shadow: 0 8rpx 16rpx rgba(246, 211, 101, 0.2);
}

.pagination button:active {
    transform: translateY(2rpx);
    opacity: 0.9;
}

.pagination button:first-child:active {
    box-shadow: 0 4rpx 8rpx rgba(168, 237, 234, 0.2);
}

.pagination button:last-child:active {
    box-shadow: 0 4rpx 8rpx rgba(246, 211, 101, 0.2);
}

.pagination button[disabled] {
    background: #f5f5f5;
    color: #999;
    box-shadow: none;
    cursor: not-allowed;
    opacity: 0.7;
}

/* 添加按钮 */
.add-button {
    position: fixed;
    right: 48rpx;
    bottom: 48rpx;
    width: 120rpx;
    height: 120rpx;
    background: linear-gradient(135deg, #4a90e2, #357abd);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8rpx 24rpx rgba(74, 144, 226, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.add-button:active {
    transform: scale(0.95) translateY(4rpx);
    box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.2);
}

.add-icon {
    width: 48rpx;
    height: 48rpx;
    filter: brightness(0) invert(1);
}

/* 全局按钮样式重置 */
button {
    margin: 0;
    padding: 0;
    line-height: 1.5;
    background: none;
    border-radius: 0;
}

button::after {
    display: none;
}

/* 弹窗样式 */
.modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
}

.modal {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    border-radius: 50rpx;
    padding: 20rpx;
    z-index: 1001;
    width: 80%;
}

.modal-title {
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    text-align: center;
}

.modal-content {
    padding: 30rpx;
    max-height: 70vh;
    overflow-y: auto;
}

.form-item {
    margin-bottom: 30rpx;
}

.form-item label {
    display: block;
    font-size: 28rpx;
    color: #333;
    margin-bottom: 16rpx;
    font-weight: 500;
}

.form-item input {
    width: 90%;
    height: 80rpx;
    padding: 0 24rpx;
    border: 2rpx solid #e8e8e8;
    border-radius: 12rpx;
    font-size: 28rpx;
    background: #f8f9fa;
    transition: all 0.3s ease;
    margin: 0 auto;
    display: block;
}

.form-item input:focus {
    border-color: #4a90e2;
    background: #fff;
}

.form-item textarea {
    width: 90%;
    height: 160rpx;
    padding: 20rpx 24rpx;
    border: 2rpx solid #e8e8e8;
    border-radius: 12rpx;
    font-size: 28rpx;
    background: #f8f9fa;
    transition: all 0.3s ease;
    margin: 0 auto;
    display: block;
}

.form-item textarea:focus {
    border-color: #4a90e2;
    background: #fff;
}

.option-item {
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
    padding: 0 24rpx;
    height: 80rpx;
    background: #f8f9fa;
    border: 2rpx solid #e8e8e8;
    border-radius: 12rpx;
    transition: all 0.3s ease;
    width: 90%;
    margin: 0 auto 16rpx;
}

.option-item:focus-within {
    border-color: #4a90e2;
    background: #fff;
}

.option-item input {
    flex: 1;
    height: 100%;
    border: none;
    background: transparent;
    font-size: 28rpx;
    padding: 0 16rpx;
    width: auto;
    margin: 0;
}

.picker-view {
    padding: 12rpx 16rpx;
    display: flex;
    align-items: center;
    transition: all 0.2s ease;
    height: 44rpx;
    background: #fff;
}

.picker-view:active {
    border-color: #4a90e2;
    background: #fff;
}

/* 弹窗按钮样式 */
.modal-footer {
    padding: 30rpx;
    border-top: 2rpx solid #f0f0f0;
    display: flex;
    justify-content: center;
    gap: 30rpx;
    background: #fff;
}

.modal-footer button {
    min-width: 180rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    border-radius: 40rpx;
    font-size: 28rpx;
    font-weight: 600;
    letter-spacing: 2rpx;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}

.modal-footer button:first-child {
    background: #f5f7fa;
    color: #666;
    border: 2rpx solid #e8e8e8;
}

.modal-footer button:first-child:active {
    background: #e8e8e8;
    transform: translateY(2rpx);
}

.modal-footer button:last-child {
    background: linear-gradient(135deg, #4a90e2, #357abd);
    color: #fff;
    box-shadow: 0 8rpx 16rpx rgba(74, 144, 226, 0.2);
}

.modal-footer button:last-child:active {
    transform: translateY(2rpx);
    box-shadow: 0 4rpx 8rpx rgba(74, 144, 226, 0.2);
    opacity: 0.95;
}

/* 图片操作按钮 */
.image-actions {
    display: flex;
    justify-content: center;
    gap: 24rpx;
    margin-bottom: 24rpx;
}

.image-actions button {
    min-width: 160rpx;
    height: 64rpx;
    line-height: 64rpx;
    text-align: center;
    border-radius: 32rpx;
    font-size: 26rpx;
    font-weight: 500;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8rpx;
    padding: 0 24rpx;
}

.image-actions button:first-child {
    background: linear-gradient(135deg, #4a90e2, #357abd);
    color: #fff;
    box-shadow: 0 4rpx 12rpx rgba(74, 144, 226, 0.2);
}

.image-actions button:last-child {
    background: linear-gradient(135deg, #ff4d4f, #cf1322);
    color: #fff;
    box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.2);
}

.image-actions button:active {
    transform: translateY(2rpx);
    opacity: 0.9;
}

.image-actions button:first-child:active {
    box-shadow: 0 2rpx 6rpx rgba(74, 144, 226, 0.2);
}

.image-actions button:last-child:active {
    box-shadow: 0 2rpx 6rpx rgba(255, 77, 79, 0.2);
}

/* 添加图标样式 */
.image-actions button::before {
    content: '';
    width: 28rpx;
    height: 28rpx;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
}

/* 正确率显示 */
.form-value {
    font-size: 28rpx;
    color: #4a90e2;
    font-weight: 500;
    padding: 16rpx 0;
}

/* 分类选择器样式 */
.category-selector {
    padding: 20rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 空状态样式 */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 120rpx 40rpx;
    background-color: #fff;
    border-radius: 24rpx;
    margin: 20rpx;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.empty-icon {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 40rpx;
    opacity: 0.6;
}

.empty-text {
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 16rpx;
}

.empty-subtext {
    font-size: 26rpx;
    color: #999;
    text-align: center;
}

.category-selector .picker-view {
    padding: 15rpx 20rpx;
    background-color: #f8f9fa;
    border-radius: 8rpx;
    font-size: 28rpx;
    color: #333;
}

/* 分类选择器容器 */
.filters-container {
    display: flex;
    gap: 16rpx;
    padding: 0 20rpx;
    margin-bottom: 5rpx;
    margin-top: 12rpx;
}

.filter-item {
    flex: 1;
    background: #fff;
    border-radius: 12rpx;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
    overflow: hidden;
    border: 1rpx solid #f0f0f0;
}

.filter-item:first-child {
    flex: 1.8;
}

.filter-item:last-child {
    flex: 1.2;
}

.picker-view {
    padding: 10rpx 12rpx;
    display: flex;
    align-items: center;
    transition: all 0.2s ease;
    height: 40rpx;
    background: #fff;
    min-width: 0;
}

.picker-view:active {
    background-color: #fafafa;
}

.picker-label {
    font-size: 22rpx;
    color: #888;
    margin-right: 4rpx;
    font-weight: 500;
    flex-shrink: 0;
    min-width: fit-content;
}

.picker-value {
    flex: 1;
    font-size: 22rpx;
    color: #333;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: 0 4rpx;
    min-width: 0;
    line-height: 1.2;
}

.picker-arrow {
    width: 20rpx;
    height: 20rpx;
    margin-left: 4rpx;
    opacity: 0.3;
    transition: all 0.2s ease;
    flex-shrink: 0;
}

.picker-view:active .picker-arrow {
    opacity: 0.5;
    transform: rotate(180deg);
}
/* 页面容器 */
.container {
    min-height: 100vh;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    padding: 32rpx;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: start;
}
  
/* 操作按钮区域 */
.action-buttons {
    display: flex;
    gap: 24rpx;
    /* margin-bottom: 48rpx; */
}

.action-btn {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 160rpx;
    background: #ffffff;
    border-radius: 24rpx;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-btn:active {
    transform: translateY(4rpx);
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.btn-icon {
    width: 64rpx;
    height: 64rpx;
    margin-bottom: 16rpx;
}

.action-btn text {
    font-size: 28rpx;
    color: #2d3436;
    font-weight: 500;
    letter-spacing: 0.5rpx;
}

/* 导入/导出按钮特色样式 */
.action-btn.import {
    background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}
  
.action-btn.export {
    background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
}
  
  /* 题目列表 */
.question-list {
    background: #ffffff;
    border-radius: 24rpx;
    overflow: auto;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}
  
.list-header {
    width: 100vw ;
    display: grid;
    grid-template-columns: 3fr 2fr 2fr;
    padding: 32rpx;
    font-size: 28rpx;
    color: #636e72;
    background: #f8f9fa;
    font-weight: 600;
    border-bottom: 2rpx solid #e9ecef;
}
  
.list-content {
    max-height: calc(100vh - 400rpx);
    overflow-y: auto;
}
  
  /* 列表项 */
.list-item {
    display: grid;
    grid-template-columns: 3fr 1.5fr 2fr;
    padding: 32rpx;
    align-items: center;
    border-bottom: 1rpx dashed #e9ecef;
    transition: all 0.3s ease;
}
  
.list-item:last-child {
    border-bottom: none;
}
  
.list-item:active {
    background: rgba(241, 242, 244, 0.5);
}
  
.question-title {
    font-size: 30rpx;
    color: #2d3436;
    font-weight: 500;
    line-height: 1.4;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
  
.question-type {
    font-size: 26rpx;
    color: #636e72;
    text-align: center;
    padding: 8rpx 16rpx;
    background: rgba(233, 236, 239, 0.5);
    border-radius: 8rpx;
    margin: 0 20rpx;
}
  
  /* 操作按钮组 */
.item-actions {
display: flex;
gap: 16rpx;
justify-content: flex-end;
}

.btn {
    width: 50rpx;
    font-size: 20rpx;
    padding: 16rpx 32rpx;
    border-radius: 12rpx;
    transition: all 0.2s ease;
    text-align: center;
}

.btn.edit {
    background: rgba(74, 144, 226, 0.1);
    color: #4a90e2;
    border: 1rpx solid rgba(74, 144, 226, 0.3);
}

.btn.edit:active {
    background: rgba(74, 144, 226, 0.2);
}

.btn.delete {
    background: rgba(245, 34, 45, 0.1);
    color: #f5222d;
    border: 1rpx solid rgba(245, 34, 45, 0.3);
}

.btn.delete:active {
    background: rgba(245, 34, 45, 0.2);
}

.question-table {
    width: 100%;
    border-collapse: collapse;
}

.list-header th {
    border-bottom: 2rpx solid #ccc;
    padding: 16rpx;
    text-align: left;
}

.list-content td {
    border-bottom: 1rpx solid #eee;
    padding: 16rpx;
}    
  
  /* 添加按钮 */
  .add-button {
    position: fixed;
    right: 48rpx;
    bottom: 48rpx;
    width: 120rpx;
    height: 120rpx;
    background: linear-gradient(135deg, #6c5ce7, #4b4bff);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 12rpx 32rpx rgba(108, 92, 231, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .add-button:active {
    transform: scale(0.95) translateY(4rpx);
    box-shadow: 0 6rpx 24rpx rgba(108, 92, 231, 0.3);
  }
  
  .add-icon {
    width: 56rpx;
    height: 56rpx;
    filter: drop-shadow(0 2rpx 4rpx rgba(0, 0, 0, 0.1));
  }
  
  /* 全局按钮样式重置 */
  button {
    margin: 0;
    padding: 0;
    line-height: 1.5;
    background: none;
    border-radius: 0;
  }
  
  button::after {
    display: none;
  }
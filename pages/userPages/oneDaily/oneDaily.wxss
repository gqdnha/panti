.container {
    height: 100vh;
    display: flex;
    flex-direction: column;
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #f5f6fa;
}

/* 进度条样式 */
.progress-bar {
    background-color: #fff;
    padding: 20rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.progress-info {
    text-align: center;
    margin-bottom: 10rpx;
    font-size: 28rpx;
    color: #333;
}

.progress-track {
    height: 10rpx;
    background-color: #e0e0e0;
    border-radius: 5rpx;
}

.progress-fill {
    height: 100%;
    background-color: #0066cc;
    border-radius: 5rpx;
    transition: width 0.3s ease;
}

/* 题目容器样式 */
.question-container {
    width: 85vw;
    flex: 1;
    background-color: #fff;
    border-radius: 10rpx;
    padding: 30rpx;
    margin-bottom: 20rpx;
    overflow-y: auto;
}

.question-type {
    font-size: 28rpx;
    color: #0066cc;
    margin-bottom: 20rpx;
    padding: 10rpx 20rpx;
    background-color: #e6f0ff;
    border-radius: 20rpx;
    display: inline-block;
}

.question-content {
    font-size: 32rpx;
    color: #333;
    line-height: 1.6;
    margin-bottom: 30rpx;
}

.question-image {
    width: 100%;
    max-height: 400rpx;
    margin-top: 20rpx;
    border-radius: 8rpx;
}

/* 选项样式 */
.options-container {
    margin-top: 30rpx;
    margin-bottom: 30rpx;
}

.option-item {
    display: flex;
    align-items: flex-start;
    padding: 20rpx;
    margin-bottom: 15rpx;
    background-color: #f8f9fa;
    border-radius: 8rpx;
    border: 1rpx solid #e0e0e0;
}

.option-content {
    font-size: 30rpx;
    color: #333;
    flex: 1;
}

/* 填空题显示样式 */
.fill-blank-display {
    padding: 20rpx;
    background-color: #f8f9fa;
    border-radius: 8rpx;
    border: 1rpx solid #e0e0e0;
}

/* 答案和解析区域 */
.answer-section {
    margin-top: 30rpx;
    padding: 20rpx;
    background-color: #f0f8ff;
    border-radius: 10rpx;
    border: 1rpx solid #d1e7dd;
}

.correct-answer {
    margin-bottom: 15rpx;
}

.answer-label,
.analysis-label {
    font-size: 28rpx;
    color: #0066cc;
    font-weight: bold;
}

.answer-content,
.analysis-content {
    font-size: 28rpx;
    color: #333;
    line-height: 1.6;
}

.analysis-section {
    margin-top: 15rpx;
}

/* 底部操作栏样式 */
.bottom-bar {
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
}

.btn {
    padding: 20rpx 40rpx;
    border-radius: 8rpx;
    font-size: 30rpx;
    text-align: center;
    background-color: #0066cc;
    color: #fff;
    flex: 1;
    margin: 0 10rpx;
}

.btn.disabled {
    background-color: #f8f9fa;
    color: #ccc;
}

.prev {
    margin-left: 0;
}

.next {
    margin-right: 0;
}

/* 空状态和加载状态 */
.no-data {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 20rpx;
    min-height: 60vh;
    color: #999;
}

.no-data-icon {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 30rpx;
    opacity: 0.5;
}

.no-data-text {
    font-size: 32rpx;
    color: #666;
    margin-bottom: 15rpx;
}

.no-data-subtitle {
    font-size: 26rpx;
    color: #999;
    text-align: center;
    line-height: 1.5;
}

.loading {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 60vh;
    color: #666;
    font-size: 28rpx;
}    
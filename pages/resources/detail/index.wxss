.container {
    padding: 20rpx;
    min-height: 100vh;
    background-color: #f5f5f5;
}

.header {
    background-color: #fff;
    padding: 30rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.type {
    font-size: 28rpx;
    color: #666;
}

/* 列表区域 */
.content {
    width: 90vw;
    /* background-color: #fff; */
    padding: 30rpx;
    border-radius: 10rpx;
    min-height: 60vh;
}

/* 列表 */
.law-list {
    display: flex;
    flex-direction: column;
    
}

/* 列表块 */
.law-list-item {
    margin-top: 5rpx;
    height: 150rpx;
    background-color: #fff;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-radius: 20rpx;
}
.law-list-item image {
    width: 120rpx;
    height: 120rpx;
}
.detil {
    display: flex;
    flex-direction: column;
    align-items: start;
}

.detil {
    margin-left: 20rpx;
}
.regulation_name {
    margin-bottom: 10rpx;
}

.regulation_type {
    color: #666;
    font-size: 25rpx;
    margin-top: 5rpx;
}
.loading-tip {
    text-align: center;
    padding: 10px;
    color: #999;
}

.pagination {
    display: flex;
    justify-content: center;
    margin-top: 20px;
}

.pagination button {
    margin: 0 10px;
}    
.container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.content {
    flex: 1;
}

.pagination {
    display: flex;
    justify-content: center;
    margin-top: 20px;
    margin-bottom: 30rpx;
}

.pagination button {
    margin: 0 10px;
}

.loading-tip {
    text-align: center;
    padding: 10px;
    color: #999;
}

.no-data {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
    color: #999;
}

.no-data-icon {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 30rpx;
    opacity: 0.5;
}

.no-data-text {
    font-size: 28rpx;
    color: #999;
}

.loading {
    text-align: center;
    padding: 40rpx 0;
    color: #666;
}
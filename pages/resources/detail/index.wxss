.container {
    padding: 20rpx;
    min-height: 100vh;
    background-color: #f5f5f5;
}

.header {
    background-color: #fff;
    padding: 30rpx;
    border-radius: 10rpx;
    margin-bottom: 20rpx;
}

.title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
}

.type {
    font-size: 28rpx;
    color: #666;
}

.content {
    background-color: #fff;
    padding: 30rpx;
    border-radius: 10rpx;
    min-height: 60vh;
}

.loading {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 200rpx;
    color: #999;
}

.text-content {
    font-size: 30rpx;
    line-height: 1.6;
    white-space: pre-wrap;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20rpx;
    background-color: #fff;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.download-btn {
    background-color: #07c160;
    color: #fff;
    border-radius: 50rpx;
    font-size: 32rpx;
    padding: 20rpx 0;
} 